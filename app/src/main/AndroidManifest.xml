<?xml version="1.0" encoding="utf-8"?>
<manifest
    package="com.worldventures.dreamtrips"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:installLocation="preferExternal">

    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.MANAGE_DOCUMENTS"/>
    <uses-permission android:name="android.permission.GET_ACCOUNTS"/>
    <uses-permission android:name="android.permission.READ_CONTACTS"/>
    <uses-permission android:name="android.permission.WRITE_CONTACTS"/>

    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE"/>

    <permission
        android:name="${appId}.permission.C2D_MESSAGE"
        android:protectionLevel="signature"/>
    <uses-permission android:name="com.worldventures.dreamtrips.permission.C2D_MESSAGE"/>

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true"/>
    <uses-feature android:name="android.hardware.camera"/>

    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="true"/>

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@drawable/ic_dt_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:theme="@style/Theme.DreamTripsTheme"
        tools:replace="icon, label">
        <meta-data
            android:name="com.instabug.DevelopmentAppToken"
            android:value="a3060506f058a57fcc3ef8d80d189e6e"/>
        <meta-data
            android:name="com.instabug.ProductionMode"
            android:value="false"/>
        <meta-data
            android:name="com.crashlytics.ApiKey"
            android:value="0335b8ecdc78ddc687fb4d90b2cdceab4329482f"/>
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id"/>
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version"/>
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="AIzaSyBEAplf65kSFB7FZSB4xPbAdWktPPBNuXA"/>
        <meta-data
            android:name="apptentive_api_key"
            android:value="${surveyApiToken}"/>
        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="${fabricApiKey}"/>
        <!-- This will prevent VERBOSE and DEBUG level logging. -->
        <meta-data
            android:name="apptentive_log_level"
            android:value="DEBUG"/>

        <activity
            android:name=".modules.common.view.activity.LaunchActivity"
            android:configChanges="orientation|screenSize|layoutDirection|locale"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".modules.common.view.activity.MainActivity"
            android:configChanges="layoutDirection|locale"
            android:label="@string/trips"
            android:windowSoftInputMode="adjustResize"/>
        <activity
            android:name=".modules.common.view.activity.ComponentActivity"
            android:configChanges="layoutDirection|locale"
            android:parentActivityName=".modules.common.view.activity.MainActivity"
            android:windowSoftInputMode="adjustResize">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".modules.common.view.activity.MainActivity"/>

        </activity>


        <activity
            android:name=".modules.common.view.activity.Palyer360Activity"
            android:screenOrientation="landscape"/>

        <activity
            android:name=".modules.common.view.activity.PlayerActivity"
            android:configChanges="orientation|screenSize|layoutDirection|locale"
            android:screenOrientation="sensorLandscape"/>

        <!--Chat activities-->
        <activity
            android:name="com.messenger.ui.activity.ChatActivity"/>

        <activity
            android:name="com.messenger.ui.activity.MessengerStartActivity"/>

        <!--For result activities-->

        <activity
            android:name=".modules.facebook.view.activity.FacebookPickPhotoActivity"
            android:configChanges="layoutDirection|locale"
            android:label="@string/trips"/>
        <activity
            android:name=".modules.tripsimages.view.activity.CreatePhotoActivity"
            android:configChanges="orientation|screenSize|layoutDirection|locale"
            android:label="@string/trips"/>

        <receiver android:name=".modules.friends.notification.FriendRejectActionReceiver"/>

        <!--Foreign activities-->

        <activity
            android:name="com.facebook.LoginActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"/>

        <activity android:name="nl.changer.polypicker.ImagePickerActivity"/>

        <activity
            android:name="com.apptentive.android.sdk.ViewActivity"
            android:theme="@style/ApptentiveTheme.Transparent"/>
        <activity
            android:name="com.instabug.wrapper.impl.v14.InstabugAnnotationActivity"
            android:windowSoftInputMode="adjustPan"/>
        <activity android:name="net.hockeyapp.android.UpdateActivity"/>


        <receiver android:name="com.instabug.library.network.InstabugNetworkReceiver">
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE"/>
            </intent-filter>
        </receiver>

        <service android:name="com.instabug.library.network.UploadCacheService"/>
        <service
            android:name="com.amazonaws.mobileconnectors.s3.transferutility.TransferService"
            android:enabled="true"/>

        <service
            android:name=".core.api.DreamSpiceService"
            android:exported="false"/>
        <service
            android:name=".core.api.VideoDownloadSpiceService"
            android:exported="false"/>

        <!--GCM-->

        <receiver
            android:name="com.google.android.gms.gcm.GcmReceiver"
            android:exported="true"
            android:permission="com.google.android.c2dm.permission.SEND">
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE"/>
                <action android:name="com.google.android.c2dm.intent.REGISTRATION"/>

                <category android:name="com.worldventures.dreamtrips"/>
            </intent-filter>
        </receiver>

        <service
            android:name="com.worldventures.dreamtrips.modules.gcm.service.PushListenerService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE"/>
            </intent-filter>
        </service>

        <service
            android:name="com.worldventures.dreamtrips.modules.gcm.service.GcmIDListenerService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.android.gms.iid.InstanceID"/>
            </intent-filter>
        </service>

        <service
            android:name="com.worldventures.dreamtrips.modules.gcm.service.RegistrationIntentService"
            android:exported="false"/>
    </application>

</manifest>
