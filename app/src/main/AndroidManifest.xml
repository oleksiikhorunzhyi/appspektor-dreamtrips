<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.worldventures.dreamtrips">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.MANAGE_DOCUMENTS" />

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <application
        android:name=".DreamTripsApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_dt_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.DreamTripsTheme"
        tools:replace="android:icon">
        <activity
            android:name=".view.activity.LoginActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustResize"></activity>
        <activity
            android:name=".view.activity.MainActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_main" />
        <activity
            android:name=".view.activity.BookItActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_main" />
        <activity
            android:name=".view.activity.FBPickPhotoActivity"
            android:label="@string/title_activity_main" />
        <activity
            android:name=".view.activity.CreatePhotoActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_main" />
        <activity
            android:name=".view.activity.LaunchActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".core.uploader.UploadingService"
            android:enabled="true"
            android:exported="true">

        </service>

        <activity
            android:name="com.facebook.LoginActivity"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />
        <activity
            android:name=".view.activity.FullScreenPhotoActivity"
            android:label="@string/title_activity_full_screen_photo" />
        <activity
            android:name=".view.activity.FullScreenTripImageActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_full_screen_photo" />
        <activity
            android:name=".view.activity.DetailTripActivity"
            android:configChanges="orientation|screenSize" />

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="AIzaSyBdicT31P63SyGzc9KWgrF2vB05nBTPciU" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="AIzaSyBdicT31P63SyGzc9KWgrF2vB05nBTPciU" />

        <activity
            android:name="com.instabug.wrapper.impl.v14.InstabugAnnotationActivity"
            android:windowSoftInputMode="adjustPan" />
        <service android:name="com.instabug.library.network.UploadCacheService"></service>
        <receiver android:name="com.instabug.library.network.InstabugNetworkReceiver">
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE"></action>
            </intent-filter>
        </receiver>

        <meta-data
            android:name="com.instabug.DevelopmentAppToken"
            android:value="a3060506f058a57fcc3ef8d80d189e6e" />
        <meta-data
            android:name="com.instabug.ProductionMode"
            android:value="false" />

        <activity android:name="net.hockeyapp.android.UpdateActivity" />

    </application>

</manifest>

