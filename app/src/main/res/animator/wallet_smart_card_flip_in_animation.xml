<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android">

   <objectAnimator
         android:duration="0"
         android:propertyName="alpha"
         android:valueFrom="1.0"
         android:valueTo="0.0" />


   <objectAnimator
         android:duration="@integer/smart_card_flip_time_full"
         android:propertyName="rotationY"
         android:repeatMode="reverse"
         android:valueFrom="-180"
         android:valueTo="0" />

   <objectAnimator
         android:duration="0"
         android:propertyName="alpha"
         android:startOffset="@integer/smart_card_flip_time_half"
         android:valueFrom="0.0"
         android:valueTo="1.0" />


   <objectAnimator
         android:duration="@integer/smart_card_flip_time_half"
         android:propertyName="scaleY"
         android:startOffset="0"
         android:valueFrom="1.0"
         android:valueTo="0.5"
         android:valueType="floatType" />

   <objectAnimator
         android:duration="@integer/smart_card_flip_time_half"
         android:propertyName="scaleY"
         android:startOffset="@integer/smart_card_flip_time_half"
         android:valueFrom="0.5"
         android:valueTo="1.0"
         android:valueType="floatType" />

   <objectAnimator
         android:duration="@integer/smart_card_flip_time_half"
         android:propertyName="scaleX"
         android:startOffset="0"
         android:valueFrom="1.0"
         android:valueTo="0.5"
         android:valueType="floatType" />

   <objectAnimator
         android:duration="@integer/smart_card_flip_time_half"
         android:propertyName="scaleX"
         android:startOffset="@integer/smart_card_flip_time_half"
         android:valueFrom="0.5"
         android:valueTo="1.0"
         android:valueType="floatType" />
</set>