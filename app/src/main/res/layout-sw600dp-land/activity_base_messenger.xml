<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    android:id="@+id/drawer"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Use match_parent for width with inverse weights so that PhotoPickerLayout will get
     MeasureSpec.EXACTLY during measure. It throws exception if MeasureSpec.UNSPECIFIED
    provided in case of having 0 dp and non-reverted weights. -->
    <com.messenger.flow.container.TabletMasterDetailRoot
        android:id="@+id/root_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <com.worldventures.dreamtrips.modules.navdrawer.NavigationDrawerViewImpl
            android:id="@+id/drawer_layout"
            android:layout_width="@dimen/navigation_drawer_static_width"
            android:layout_height="match_parent"
            tools:layout="@layout/fragment_navigation_drawer"/>

        <com.messenger.flow.container.MasterPathContainerView
            android:id="@id/master_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"/>

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/list_item_divider_color"
            />

        <com.messenger.flow.container.DetailContainerView
            android:id="@id/details_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    </com.messenger.flow.container.TabletMasterDetailRoot>

</android.support.v4.widget.DrawerLayout>