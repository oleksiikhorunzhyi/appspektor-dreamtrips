<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mainFrame"
    android:clickable="true"
    android:background="@color/black_semi_transparent"
    android:orientation="horizontal">

    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.5" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:clickable="true"
        android:layout_weight="1"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@color/theme_main"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewQuickInputHeader"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:text="@string/bucket_list_my_title"
                android:textColor="@android:color/white"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/done"
                android:layout_width="?actionBarSize"
                android:layout_height="?actionBarSize"
                android:background="?actionBarItemBackground"
                android:layout_gravity="center"
                android:padding="12dp"
                android:src="@drawable/ic_done_white" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/editTextQuickInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/bucket_quick_input_title"
                android:imeOptions="actionDone"
                android:singleLine="true"
                android:textColor="#3f3f3f"
                android:textColorHint="#979797"
                app:baseColor="@color/theme_main_darker"
                app:floatingLabel="highlight"
                app:hintColor="@android:color/white"
                app:primaryColor="@color/theme_main_darker" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerViewBucketItems"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.5" />


</LinearLayout>