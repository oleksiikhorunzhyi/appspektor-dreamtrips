<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Space
        android:id="@+id/feedDetailsLeftSpace"
        android:layout_width="@dimen/feed_details_space_width"
        android:layout_height="match_parent"
        android:visibility="gone"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/additional_container"
        android:layout_toRightOf="@+id/feedDetailsLeftSpace">

        <com.worldventures.dreamtrips.modules.common.view.custom.EmptyRecyclerView
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/input_container"
            android:layout_alignParentTop="true"/>

        <include
            android:id="@+id/input_container"
            layout="@layout/adapter_item_add_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/additional_container"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:orientation="horizontal">

        <Space
            android:id="@+id/feedDetailsRightSpace"
            android:layout_width="@dimen/feed_details_space_width"
            android:layout_height="match_parent"
            android:visibility="gone"/>

        <FrameLayout
            android:id="@+id/comments_additional_info_container"
            android:layout_width="@dimen/feed_details_additional_info_container_width"
            android:layout_height="match_parent"/>
    </LinearLayout>
</RelativeLayout>