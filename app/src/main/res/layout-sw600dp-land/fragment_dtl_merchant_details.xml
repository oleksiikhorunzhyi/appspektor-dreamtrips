<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:layout_marginLeft="400dp"
    >

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_actionbar"
        style="@style/ToolBarStyle"
        android:layout_width="match_parent"
        android:navigationIcon="@drawable/back_icon"
        app:navigationIcon="@drawable/back_icon"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@drawable/list_divider"
        android:orientation="vertical"
        android:showDividers="middle"
        >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dtl_details_header_height"
            >

            <android.support.v4.view.ViewPager
                android:id="@+id/merchant_details_cover_pager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@drawable/list_divider_vertical"
                android:orientation="horizontal"
                android:showDividers="middle"
                >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:orientation="vertical">

                    <include
                        layout="@layout/include_dtl_place_details_header"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        />

                    <include
                        layout="@layout/include_dtl_place_details_category"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        />
                </LinearLayout>

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:minHeight="140dp"
                    >

                    <FrameLayout
                        android:id="@+id/merchant_details_map"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:background="#96c2c2c2"
                        android:gravity="center"
                        android:padding="@dimen/spacing_small"
                        android:text="@string/directions"
                        android:textAllCaps="true"
                        android:textColor="#005e92"
                        android:textSize="14sp"
                        />

                    <!-- Next layer is just to get clicks on map -->
                    <FrameLayout
                        android:id="@+id/dtl_merchant_details_map_click_interceptor"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        />
                </FrameLayout>
            </LinearLayout>
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@drawable/list_divider_vertical"
            android:background="@color/dtl_cities_background"
            android:orientation="horizontal"
            android:showDividers="middle">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:divider="@drawable/list_divider"
                android:orientation="vertical"
                android:showDividers="middle"
                >

                <LinearLayout
                    android:id="@+id/merchant_details_earn_wrapper"
                    style="@style/Widget.AppCompat.ButtonBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/dtl_cities_background"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_normal"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >

                        <Button
                            android:id="@+id/merchant_details_earn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="@string/dtl_check_in"
                            android:textColor="@color/white"
                            android:theme="@style/DtlButtonTheme"
                            />

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1"/>

                        <Button
                            android:id="@+id/merchant_details_estimate_points"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="@string/point_estimator"
                            android:textColor="@color/black"
                            android:theme="@style/WhiteButtonTheme"
                            />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/checked_in"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_small"
                        android:gravity="center"
                        android:text="@string/checked_in"
                        android:visibility="gone"/>
                </LinearLayout>

                <FrameLayout
                    android:id="@+id/merchant_details_merchant_wrapper"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#eeeeee"
                    android:orientation="horizontal"
                    android:padding="@dimen/spacing_normal"
                    android:visibility="gone"
                    >

                    <Button
                        android:id="@+id/merchant_details_suggest_merchant"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/suggest_merchant"
                        android:textColor="@color/black"
                        android:theme="@style/WhiteButtonTheme"
                        />

                </FrameLayout>

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >

                        <LinearLayout
                            android:id="@+id/perks_description_header"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:orientation="vertical"
                            android:padding="@dimen/spacing_normal"
                            >

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawableLeft="@drawable/perks_icon"
                                android:drawablePadding="@dimen/spacing_small"
                                android:drawableStart="@drawable/perks_icon"
                                android:text="@string/dtl_perks_description"
                                android:textColor="@color/dtl_cities_text_color"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                />

                            <TextView
                                android:id="@+id/merchant_details_perks_description"
                                style="@style/TextAppearance.AppCompat.Body1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/spacing_small"
                                android:textColor="@color/perks_text_color"
                                android:textSize="14sp"
                                tools:text="It is a Family owned breakfast and lunch restaurant with more than generous plate servings."
                                />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/description_header"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/dtl_cities_background"
                            android:orientation="vertical"
                            android:padding="@dimen/spacing_normal"
                            >

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawablePadding="@dimen/spacing_tiny"
                                android:text="@string/dtl_description"
                                android:textColor="@color/dtl_cities_text_color"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                />

                            <TextView
                                android:id="@+id/merchant_details_description"
                                style="@style/TextAppearance.AppCompat.Body1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:textSize="14sp"
                                tools:text="Sed ut perspiciatis unde omnis iste natus error sit voluptatem, totam rem aperiam, eaque ipsa quae ab illo et quasi architecto beatae vitae sunt explicabo. "
                                />

                        </LinearLayout>
                    </LinearLayout>
                </ScrollView>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/dtl_cities_background">

                    <LinearLayout
                        android:id="@+id/merchant_details_share"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center_horizontal"
                        android:layout_margin="@dimen/spacing_normal"
                        android:minWidth="160dp"
                        android:orientation="horizontal"
                        android:padding="0dp"
                        android:paddingBottom="@dimen/spacing_small"
                        android:paddingTop="@dimen/spacing_small"
                        android:theme="@style/WhiteButtonTheme"
                        >

                        <View
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:background="@drawable/share_icon"/>

                        <TextView
                            style="@style/Base.Widget.AppCompat.Button.Borderless"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:clickable="false"
                            android:text="@string/action_share"
                            />
                    </LinearLayout>

                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#eeeeee"
                    android:divider="@drawable/list_divider_vertical"
                    android:orientation="horizontal"
                    android:showDividers="middle"
                    >

                    <LinearLayout
                        android:id="@+id/merchant_details_additional"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.75"
                        android:divider="@drawable/list_divider_with_padding"
                        android:orientation="vertical"
                        android:showDividers="middle"/>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
