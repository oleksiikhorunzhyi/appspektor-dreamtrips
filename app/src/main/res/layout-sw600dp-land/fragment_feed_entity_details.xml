<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:app="http://schemas.android.com/apk/res-auto"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      >

   <android.support.v7.widget.CardView
         android:layout_width="0dp"
         android:layout_height="wrap_content"
         android:layout_margin="4dp"
         android:layout_weight="2"
         app:cardCornerRadius="4dp"
         >


      <ScrollView
            android:id="@+id/feedDetailsRootView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:fillViewport="false"
            >

         <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:animateLayoutChanges="true"
               android:orientation="vertical"
               >

            <include layout="@layout/adapter_item_feed_header" />

            <FrameLayout
                  android:id="@+id/entity_content_container"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  ></FrameLayout>

            <com.worldventures.dreamtrips.modules.feed.view.custom.FeedActionPanelView
                  android:id="@+id/actionView"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  />

         </LinearLayout>
      </ScrollView>
   </android.support.v7.widget.CardView>

   <include layout="@layout/layout_feed_user_info" />

</LinearLayout>
