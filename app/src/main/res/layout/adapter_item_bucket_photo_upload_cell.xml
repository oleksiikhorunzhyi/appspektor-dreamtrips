<?xml version="1.0" encoding="utf-8"?>
<com.worldventures.dreamtrips.modules.bucketlist.view.custom.SquareLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingRight="8dp"
    android:paddingTop="4dp">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/imageViewPhoto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="4dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="4dp"
        fresco:actualImageScaleType="centerCrop"/>

    <view
        android:id="@+id/fab_progress"
        android:enabled="false"
        class="mbanje.kurt.fabbutton.FabButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:color="@color/bucket_blue"
        android:indeterminate="false"
        android:max="100"
        android:src="@drawable/ic_upload_cloud"
        android:visibility="visible"
        app:fbb_autoStart="true"
        app:fbb_endBitmap="@drawable/ic_upload_done"
        app:fbb_progressColor="#ffffff"
        app:fbb_progressWidthRatio="0.1"
        app:fbb_showEndBitmap="true" />
</com.worldventures.dreamtrips.modules.bucketlist.view.custom.SquareLayout>