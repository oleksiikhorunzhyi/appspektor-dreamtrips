<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/card_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="@dimen/dtlPlaceItemMargin"
    card_view:cardCornerRadius="@dimen/dtlPlaceItemRoundRadius"
    >

    <RelativeLayout
        android:id="@+id/itemLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <RelativeLayout
            android:id="@+id/imageLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dtlPlaceImageHeight"
            >

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/imageViewDtlPlaceImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                fresco:actualImageScaleType="focusCrop"
                fresco:placeholderImage="@drawable/ic_trip_image_placeholder"
                fresco:placeholderImageScaleType="fitXY"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/dtl_place_item_shadow"
                />

            <ImageView
                android:layout_width="@dimen/dtlPlaceBadgeSize"
                android:layout_height="@dimen/dtlPlaceBadgeSize"
                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/dtlPlaceBadgeMargin"
                android:src="@drawable/ic_points_badge"
                />

            <FrameLayout
                android:id="@+id/ratingLayout"
                android:layout_width="@dimen/dtlPlaceRatingWidth"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/dtlPlaceRatingMargin"
                android:background="#88000000"
                tools:layout_height="16dp"
                />

            <TextView
                android:id="@+id/placeName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/dtlPlaceNameMarginBottom"
                android:layout_marginLeft="@dimen/dtlPlaceNameMarginLeft"
                android:layout_toLeftOf="@id/ratingLayout"
                android:textColor="@android:color/white"
                android:textSize="@dimen/dtlPlaceNameTextSize"
                android:textStyle="bold"
                tools:text="Corner Bakery Cafe"
                />
        </RelativeLayout>


        <LinearLayout
            android:id="@+id/layoutInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageLayout"
            android:background="@color/white"
            android:orientation="horizontal"
            android:padding="@dimen/dtlPlaceInfoLayoutPadding"
            >

            <TextView
                android:id="@+id/categoryName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#9b9b9b"
                android:textSize="@dimen/dtlPlaceCategoryNameTextSize"
                android:textStyle="bold"
                tools:text="Coffee &amp; Bakery"
                />

            <FrameLayout
                android:id="@+id/priceLayout"
                android:layout_width="@dimen/dtlPlacePriceWidth"
                android:layout_height="wrap_content"
                tools:background="#88000000"
                tools:layout_height="18dp"
                />
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>
