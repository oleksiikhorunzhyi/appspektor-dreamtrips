<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_wrapper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/spacing_small"
        app:cardCornerRadius="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <include layout="@layout/adapter_item_feed_header"/>

            <include layout="@layout/adapter_item_feed_photo_child"/>

            <include layout="@layout/adapter_item_feed_footer"/>

            <include layout="@layout/include_user_liked"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>