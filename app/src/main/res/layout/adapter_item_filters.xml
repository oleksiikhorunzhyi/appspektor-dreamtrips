<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:paddingTop="15dp"
            android:text="@string/filter_duration_header"
            android:textColor="@color/black" />

        <com.appyvet.rangebar.RangeBar
            android:id="@+id/rangeBarDay"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            custom:mrb_connectingLineColor="#54B5FC"
            custom:mrb_pinColor="#54B5FC"
            custom:mrb_rangeBar="true"
            custom:mrb_selectorColor="#54B5FC"
            custom:mrb_tickEnd="9"
            custom:mrb_tickInterval="1"
            custom:mrb_tickStart="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:paddingLeft="25dp"
            android:paddingTop="15dp"
            android:text="0"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:paddingRight="25dp"
            android:paddingTop="15dp"
            android:text="9+"
            android:textColor="@color/black"
            android:textSize="14sp" />

    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#CCCCCC" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:paddingTop="15dp"
            android:text="@string/filter_price_header"
            android:textColor="@color/black" />

        <com.appyvet.rangebar.RangeBar
            android:id="@+id/rangeBarPrice"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            custom:mrb_connectingLineColor="#54B5FC"
            custom:mrb_pinColor="#54B5FC"
            custom:mrb_selectorColor="#54B5FC"
            custom:mrb_tickEnd="500"
            custom:mrb_tickInterval="100"
            custom:mrb_tickStart="100" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:paddingLeft="15dp"
            android:paddingTop="15dp"
            android:text="100"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:paddingRight="15dp"
            android:paddingTop="15dp"
            android:text="500+"
            android:textColor="@color/black"
            android:textSize="14sp" />


    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#CCCCCC" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#CCCCCC" />


</LinearLayout>