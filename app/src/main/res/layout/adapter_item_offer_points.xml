<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
      android:id="@+id/points_view"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@android:color/white"
      >

   <View
         android:layout_width="match_parent"
         android:layout_height="1dp"
         android:layout_gravity="top"
         android:background="@drawable/divider_list"
         />

   <FrameLayout style="@style/DtlOfferImageView">

      <ImageView
            android:layout_width="49dp"
            android:layout_height="43dp"
            android:src="@drawable/ic_dtl_points_badge"
            android:layout_gravity="center"
            android:padding="@dimen/spacing_tiny"
            />
   </FrameLayout>

   <TextView
         android:id="@+id/pointsDescription"
         style="@style/DreamMerchantTextAppearance"
         android:text="@string/dtl_earn_points"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_gravity="center_vertical"
         android:layout_marginLeft="@dimen/dtlOfferCoverImageWidth"
         android:padding="@dimen/spacing_tiny"
         android:maxLines="1"
         />
</FrameLayout>
