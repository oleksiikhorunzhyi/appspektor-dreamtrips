<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/photo_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/attached_photo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <com.worldventures.dreamtrips.modules.common.view.custom.tagview.viewgroup.newio.PhotoTagHolder
            android:id="@+id/photo_post_taggable_holder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"/>

        <View
            android:id="@+id/shadow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black_semi_transparent"
            android:visibility="gone"/>

        <view
            android:id="@+id/fab_progress"
            class="mbanje.kurt.fabbutton.FabButton"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:color="@color/bucket_blue"
            android:enabled="false"
            android:indeterminate="false"
            android:max="100"
            android:src="@drawable/ic_upload_cloud"
            android:visibility="gone"
            app:fbb_autoStart="true"
            app:fbb_endBitmap="@drawable/ic_upload_cloud"
            app:fbb_progressColor="#ffffff"
            app:fbb_showEndBitmap="true"/>

        <ImageView
            android:id="@+id/remove"
            android:layout_width="@dimen/size_small"
            android:layout_height="@dimen/size_small"
            android:layout_gravity="end"
            android:layout_margin="@dimen/spacing_small"
            android:src="@drawable/ic_action_cancel"/>

        <TextView
            android:id="@+id/tag_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="@dimen/spacing_medium"
            android:layout_marginLeft="@dimen/spacing_medium"
            android:drawableLeft="@drawable/ic_tag"
            android:drawablePadding="@dimen/spacing_small"
            android:text="@string/tag_people"
            android:textColor="@android:color/white"/>
    </FrameLayout>

    <EditText
        android:id="@+id/photo_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/photo_container"
        android:background="@null"
        android:hint="Add a title"
        android:padding="10dp"/>
</RelativeLayout>