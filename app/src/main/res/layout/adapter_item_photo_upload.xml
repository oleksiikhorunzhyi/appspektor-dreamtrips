<?xml version="1.0" encoding="utf-8"?>
<com.worldventures.dreamtrips.modules.common.view.custom.SquareRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/res"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/imageViewPhoto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/spacing_tiniest"
        fresco:actualImageScaleType="centerCrop"/>

    <view
        android:id="@+id/fab_progress"
        class="mbanje.kurt.fabbutton.FabButton"
        android:layout_width="@dimen/size_large"
        android:layout_height="@dimen/size_large"
        android:layout_centerInParent="true"
        android:color="@color/bucket_blue"
        android:max="100"
        android:src="@drawable/ic_upload_cloud"
        app:fbb_autoStart="true"
        app:fbb_endBitmap="@drawable/ic_upload_cloud"
        app:fbb_progressColor="#ffffff"
        app:fbb_progressWidthRatio="0.1"
        app:fbb_showEndBitmap="true"/>

</com.worldventures.dreamtrips.modules.common.view.custom.SquareRelativeLayout>