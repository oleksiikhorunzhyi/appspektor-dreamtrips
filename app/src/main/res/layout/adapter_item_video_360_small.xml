<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/margin_video"
    android:layout_width="@dimen/video_three_sixty_width_small"
    android:layout_height="match_parent">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/iv_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        fresco:actualImageScaleType="centerCrop"
        fresco:placeholderImageScaleType="fitXY"
        fresco:placeholderImage="@drawable/ic_trip_image_placeholder" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#6e000000"
        android:orientation="horizontal"
        android:padding="6dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:scaleType="centerInside"
            android:src="@drawable/ic_play_arrow_white" />

        <TextView
            android:id="@+id/textViewDuration"

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="16sp"
            android:text="3:22 MIN"
            android:textColor="@android:color/white"
            android:layout_weight="1" />


        <view
            android:id="@+id/iv_download"
            android:enabled="false"
            class="mbanje.kurt.fabbutton.FabButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center|right"
            android:color="@color/bucket_blue"
            android:indeterminate="false"
            android:max="100"
            android:src="@drawable/ic_video_download"
            android:visibility="visible"
            app:fbb_autoStart="true"
            app:fbb_endBitmap="@drawable/ic_video_done"
            app:fbb_progressColor="#ffffff"
            app:fbb_progressWidthRatio="0.1"
            app:fbb_showEndBitmap="true" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="#6e000000"
        android:orientation="horizontal"
        android:padding="12dp">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/margin_small"
            android:singleLine="true"
            android:text="Experience the Great Wall Of China"
            android:textColor="@android:color/white"
            android:textSize="16sp" />


    </LinearLayout>
</RelativeLayout>