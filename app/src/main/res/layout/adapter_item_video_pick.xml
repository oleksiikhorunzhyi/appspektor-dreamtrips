<?xml version="1.0" encoding="utf-8"?>
<com.worldventures.dreamtrips.social.ui.bucketlist.view.custom.SquareLayout xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:fresco="http://schemas.android.com/apk/res-auto"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:padding="@dimen/picker_photo_spacing"
      fresco:side_priority="width"
      >

   <com.facebook.drawee.view.SimpleDraweeView
         android:id="@+id/iv_photo"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         fresco:placeholderImage="@drawable/ic_cover_place_holder"
         fresco:placeholderImageScaleType="centerCrop"
         />

   <ImageView
         android:id="@+id/pick"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_gravity="top|right"
         android:layout_margin="@dimen/spacing_tiny"
         android:src="@drawable/add_photo_icon"
         />

   <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:paddingLeft="@dimen/spacing_small"
         android:paddingRight="@dimen/spacing_small"
         android:paddingTop="@dimen/spacing_tiny"
         android:paddingBottom="@dimen/spacing_tiny"
         android:background="#66000000"
         android:layout_gravity="bottom"
         >
         <ImageView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/video_ic_small"
               android:layout_centerVertical="true"
               />
         <TextView
               android:id="@+id/iv_duration"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_centerVertical="true"
               android:layout_alignParentRight="true"
               android:textColor="@color/white"
               android:textSize="12sp"
               />
   </RelativeLayout>

</com.worldventures.dreamtrips.social.ui.bucketlist.view.custom.SquareLayout>