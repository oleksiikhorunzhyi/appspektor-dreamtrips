<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/bank_card"
      xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:tools="http://schemas.android.com/tools"
      android:layout_width="@dimen/wallet_bank_card_default_width"
      android:layout_height="@dimen/wallet_bank_card_default_height"
      android:layout_gravity="center_horizontal"
      android:background="@drawable/creditcard_blue"
      android:paddingBottom="@dimen/spacing_medium"
      android:paddingLeft="@dimen/spacing_normal"
      android:paddingRight="@dimen/spacing_normal"
      android:paddingTop="@dimen/spacing_medium"
      >

   <RelativeLayout
         android:id="@+id/bankInfoContainer"
         android:layout_width="wrap_content"
         android:layout_height="@dimen/wallet_bank_card_default_bank_info_container_height"
         android:layout_marginBottom="@dimen/spacing_small"
         android:gravity="center_vertical"
         >

      <TextView
            android:id="@+id/defaultCardLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/wallet_wizard_default_card_label"
            android:textColor="@android:color/white"
            android:textSize="9sp"
            android:visibility="gone"
            />

      <TextView
            android:id="@+id/bankLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/defaultCardLabel"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            tools:text="@string/wallet_bank_name_text_holder"
            />

      <ImageView
            android:id="@+id/typeIcon"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:textColor="@android:color/white"
            android:visibility="visible"
            tools:src="@drawable/wallet_finansial_service_mastercard"
            />

      <TextView
            android:id="@+id/cardType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/typeIcon"
            android:layout_below="@+id/typeIcon"
            android:layout_marginRight="8dp"
            android:textAllCaps="true"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/white"
            tools:text="Credit"
            />

   </RelativeLayout>

   <TextView
         android:id="@+id/cardTitle"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_below="@+id/bankInfoContainer"
         android:layout_marginBottom="@dimen/spacing_small"
         android:textColor="@android:color/white"
         android:textSize="@dimen/font_normal"
         tools:text="Shirly A template"
         />

   <TextView
         android:id="@+id/cardNumber"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_below="@+id/cardTitle"
         android:textColor="@android:color/white"
         android:textSize="@dimen/font_large"
         tools:text="**** **** **** 1234"
         />

   <TextView
         android:id="@+id/good_thru_label"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentBottom="true"
         android:layout_alignParentStart="true"
         android:layout_alignParentTop="false"
         android:layout_marginBottom="2dp"
         android:text="@string/wallet_bank_card_good_thru"
         android:textColor="@android:color/white"
         android:textSize="9sp"
         />

   <TextView
         android:id="@+id/expireDate"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentBottom="true"
         android:layout_marginStart="8dp"
         android:layout_toEndOf="@+id/good_thru_label"
         android:textColor="@android:color/white"
         android:textSize="@dimen/font_normal"
         tools:text="09/18"
         />
</RelativeLayout>

