<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:app="http://schemas.android.com/apk/res-auto"
      xmlns:tools="http://schemas.android.com/tools"
      android:layout_width="match_parent"
      android:layout_height="@dimen/wallet_card_height"
      android:animateLayoutChanges="true"
      android:background="@drawable/flyecard_front_with_emv"
      android:paddingBottom="@dimen/spacing_small"
      android:paddingEnd="@dimen/spacing_normal"
      android:paddingStart="@dimen/spacing_normal"
      android:paddingTop="@dimen/spacing_medium"
      >

   <ImageView
         android:id="@+id/settings_button"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentEnd="true"
         android:layout_marginEnd="8dp"
         android:layout_marginTop="4dp"
         android:background="?attr/selectableItemBackgroundBorderless"
         android:src="@drawable/ic_wallet_settings"
         tools:ignore="ContentDescription"
         />

   <com.worldventures.dreamtrips.modules.common.view.custom.BadgeView
         android:id="@+id/smartcard_badge"
         android:layout_width="16dp"
         android:layout_height="wrap_content"
         android:layout_alignEnd="@+id/settings_button"
         android:layout_marginEnd="-8dp"
         android:textSize="@dimen/font_small"
         tools:text="1"
         />

   <ImageView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignBottom="@+id/settings_button"
         android:layout_alignTop="@+id/settings_button"
         android:layout_marginEnd="@dimen/spacing_medium"
         android:layout_marginTop="6dp"
         android:layout_toStartOf="@+id/settings_button"
         android:src="@drawable/ic_wallet_green_dot"
         tools:ignore="ContentDescription"
         />

   <LinearLayout
         android:id="@+id/indicators_container"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentBottom="true"
         android:layout_alignParentEnd="true"
         android:layout_marginTop="15dp"
         android:gravity="center_vertical|bottom"
         android:orientation="horizontal"
         >

      <ImageView
            android:id="@+id/link_indicator"
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:layout_margin="2dp"
            tools:ignore="ContentDescription"
            tools:src="@drawable/ic_wallet_link_indicator"
            />

      <ImageView
            android:id="@+id/stealth_indicator"
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:layout_margin="2dp"
            android:src="@drawable/ic_wallet_stealth_indicator"
            android:visibility="gone"
            tools:ignore="ContentDescription"
            tools:visibility="visible"
            />

      <ImageView
            android:id="@+id/lock_indicator"
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:layout_margin="2dp"
            tools:ignore="ContentDescription"
            tools:src="@drawable/ic_wallet_lock_indicator"
            />

      <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            >

         <TextView
               android:id="@+id/batteryLevel"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textColor="#ffffff"
               android:textSize="10sp"
               tools:text="0%"
               />

         <com.worldventures.dreamtrips.wallet.ui.widget.BatteryView
               android:id="@+id/batteryView"
               android:layout_width="21dp"
               android:layout_height="11dp"
               android:layout_marginBottom="2dp"
               android:layout_marginLeft="2dp"
               android:layout_marginRight="2dp"
               />
      </LinearLayout>

   </LinearLayout>

   <TextView
         android:id="@+id/connectedCardsCount"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_alignParentBottom="true"
         android:layout_marginEnd="5dp"
         android:layout_toStartOf="@+id/indicators_container"
         android:textColor="@color/wallet_card_list_header_text"
         android:textSize="@dimen/font_medium"
         tools:text="@string/wallet_card_list_records_connected"
         />

   <com.facebook.drawee.view.SimpleDraweeView
         android:id="@+id/cardListSCAvatar"
         android:layout_width="90.4dp"
         android:layout_height="90.4dp"
         android:layout_above="@+id/indicators_container"
         android:layout_alignParentEnd="true"
         android:layout_marginBottom="10dp"
         app:placeholderImage="@drawable/avatar"
         app:placeholderImageScaleType="fitCenter"
         />

   <TextView
         android:id="@+id/bankLabel"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_above="@+id/connectedCardsCount"
         android:layout_alignParentStart="true"
         android:ellipsize="end"
         android:singleLine="true"
         android:textColor="@android:color/white"
         android:textSize="@dimen/font_normal"
         tools:text="Jhon's card"
         />

</RelativeLayout>