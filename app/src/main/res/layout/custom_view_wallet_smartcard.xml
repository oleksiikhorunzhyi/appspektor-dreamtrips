<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:app="http://schemas.android.com/apk/res-auto"
      xmlns:tools="http://schemas.android.com/tools"
      android:layout_width="@dimen/wallet_smart_card_default_width"
      android:layout_height="@dimen/wallet_smart_card_default_height"
      android:animateLayoutChanges="true"
      android:background="@drawable/flyecard_front"
      android:paddingBottom="@dimen/spacing_medium"
      android:paddingEnd="@dimen/spacing_normal"
      android:paddingStart="@dimen/spacing_normal"
      android:paddingTop="@dimen/spacing_medium"
      >

   <ImageView
         android:id="@+id/settings_button"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentEnd="true"
         android:background="?attr/selectableItemBackgroundBorderless"
         android:src="@drawable/ic_wallet_settings"
         tools:ignore="ContentDescription"
         />

   <ImageView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentEnd="true"
         android:layout_marginEnd="30dp"
         android:layout_marginTop="9dp"
         android:src="@drawable/ic_wallet_green_dot"
         tools:ignore="ContentDescription"
         />

   <com.facebook.drawee.view.SimpleDraweeView
         android:id="@+id/cardListSCAvatar"
         android:layout_width="72dp"
         android:layout_height="72dp"
         android:layout_above="@+id/indicators_container"
         android:layout_alignParentEnd="true"
         app:placeholderImage="@drawable/avatar"
         />

   <LinearLayout
         android:id="@+id/indicators_container"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentBottom="true"
         android:layout_alignParentEnd="true"
         android:layout_marginTop="4dp"
         android:gravity="center_vertical"
         android:orientation="horizontal"
         >

      <ImageView
            android:id="@+id/link_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            tools:ignore="ContentDescription"
            tools:src="@drawable/ic_wallet_link_indicator"
            />

      <ImageView
            android:id="@+id/stealth_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:src="@drawable/ic_wallet_stealth_indicator"
            android:visibility="gone"
            tools:ignore="ContentDescription"
            tools:visibility="visible"
            />

      <ImageView
            android:id="@+id/lock_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            tools:ignore="ContentDescription"
            tools:src="@drawable/ic_wallet_lock_indicator"
            />

      <com.worldventures.dreamtrips.wallet.ui.widget.BatteryView
            android:id="@+id/batteryView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            />

   </LinearLayout>

   <TextView
         android:id="@+id/bankLabel"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_above="@+id/connectedCardsCount"
         android:layout_alignParentStart="true"
         android:layout_marginEnd="10dp"
         android:layout_toStartOf="@+id/cardListSCAvatar"
         android:ellipsize="end"
         android:singleLine="true"
         android:textColor="@android:color/white"
         android:textSize="@dimen/font_normal"
         tools:text="Jhon's card"
         />

   <TextView
         android:id="@+id/connectedCardsCount"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_alignParentBottom="true"
         android:layout_marginEnd="5dp"
         android:layout_toStartOf="@+id/indicators_container"
         android:textColor="@color/wallet_card_list_header_text"
         android:textSize="@dimen/font_medium"
         tools:text="@string/wallet_card_list_records_connected"
         />

</RelativeLayout>