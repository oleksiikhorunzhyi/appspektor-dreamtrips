<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/relative_layout_merchant_types"
      xmlns:android="http://schemas.android.com/apk/res/android"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@drawable/filter_merchant_type_background"
      >

   <ImageView
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_alignBottom="@+id/linear_layout_merchant_types"
         android:background="@drawable/rectangle_type"
         />

   <LinearLayout
         android:id="@+id/linear_layout_merchant_types"
         android:layout_width="match_parent"
         android:layout_height="133dp"

         android:orientation="horizontal"
         android:weightSum="1"
         >

      <LinearLayout
            android:id="@+id/btn_filter_merchant_food"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/filter_layout_margin_left"
            android:layout_marginTop="12dp"
            android:orientation="vertical"
            >

         <RelativeLayout
               android:layout_width="85dp"
               android:layout_height="85dp"
               >

            <View
                  android:id="@+id/id_view_food"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:layout_alignParentStart="true"
                  android:layout_alignParentTop="true"
                  android:background="@drawable/circle_merchant_button"
                  />

            <ImageView
                  android:layout_width="36dp"
                  android:layout_height="47dp"
                  android:layout_centerHorizontal="true"
                  android:layout_centerVertical="true"
                  android:src="@drawable/ic_food"
                  />

         </RelativeLayout>


         <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="center"
               android:layout_marginTop="7dp"
               android:text="@string/filter_merchant_food"
               android:textColor="@color/white"
               android:textSize="12sp"
               android:textStyle="bold"
               />

      </LinearLayout>

      <LinearLayout
            android:id="@+id/btn_filter_merchant_entertainment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/filter_layout_margin_left"
            android:layout_marginTop="12dp"
            android:orientation="vertical"
            >

         <RelativeLayout
               android:layout_width="85dp"
               android:layout_height="85dp"
               >

            <View
                  android:id="@+id/id_view_entertainment"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:layout_alignParentStart="true"
                  android:layout_alignParentTop="true"
                  android:background="@drawable/circle_merchant_button"
                  />

            <ImageView
                  android:layout_width="55dp"
                  android:layout_height="68dp"
                  android:layout_alignParentBottom="true"
                  android:layout_centerHorizontal="true"
                  android:src="@drawable/cat_icon_entertainment"
                  />

         </RelativeLayout>


         <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="center"
               android:layout_marginTop="7dp"
               android:text="@string/filter_merchant_entertainment"
               android:textColor="@color/white"
               android:textSize="12sp"
               android:textStyle="bold"
               />

      </LinearLayout>

      <LinearLayout
            android:id="@+id/btn_filter_merchant_spa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/filter_layout_margin_left"
            android:layout_marginTop="12dp"
            android:orientation="vertical"
            >

         <RelativeLayout
               android:layout_width="85dp"
               android:layout_height="85dp"
               >

            <View
                  android:id="@+id/id_view_spas"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:layout_alignParentStart="true"
                  android:layout_alignParentTop="true"
                  android:background="@drawable/circle_merchant_button"
                  />

            <ImageView
                  android:layout_width="52dp"
                  android:layout_height="44dp"
                  android:layout_centerHorizontal="true"
                  android:layout_centerVertical="true"
                  android:src="@drawable/ic_spa"
                  />

         </RelativeLayout>


         <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="center"
               android:layout_marginTop="7dp"
               android:text="@string/filter_merchant_spa"
               android:textColor="@color/white"
               android:textSize="12sp"
               android:textStyle="bold"
               />

      </LinearLayout>
   </LinearLayout>
</RelativeLayout>