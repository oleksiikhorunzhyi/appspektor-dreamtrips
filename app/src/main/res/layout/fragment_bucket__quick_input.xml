<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="@dimen/activity_horizontal_margin"
    android:orientation="vertical">

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/editTextQuickInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="#979797"
        android:textColor="#3f3f3f"
        android:hint="@string/bucket_quick_input_title"
        app:baseColor="@color/theme_main_darker"
        app:floatingLabel="highlight"
        android:singleLine="true"
        android:imeOptions="actionDone"
        app:hintColor="@android:color/white"
        app:primaryColor="@color/theme_main_darker"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerViewBucketItems"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>