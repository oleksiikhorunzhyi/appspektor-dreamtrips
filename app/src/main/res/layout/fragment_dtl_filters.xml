<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:custom="http://schemas.android.com/apk/res-auto"
                xmlns:materialdesign="http://schemas.android.com/tools"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:clickable="true">

    <FrameLayout
        android:id="@+id/price_view_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:paddingTop="15dp"
            android:text="@string/dtl_price"
            android:textColor="@color/black"/>

        <com.appyvet.rangebar.RangeBar
            android:id="@+id/range_bar_price"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            custom:connectingLineColor="#54B5FC"
            custom:pinColor="#54B5FC"
            custom:rangeBar="true"
            custom:selectorColor="#54B5FC"
            custom:tickEnd="5"
            custom:tickInterval="1"
            custom:tickStart="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:paddingLeft="25dp"
            android:paddingTop="15dp"
            android:text="$"
            android:textColor="@color/black"
            android:textSize="14sp"
            tools:ignore="HardcodedText"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:paddingRight="12dp"
            android:paddingTop="15dp"
            android:text="$$$$$"
            android:textColor="@color/black"
            android:textSize="14sp"
            tools:ignore="HardcodedText"
            />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/distance_view_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/price_view_group"
        android:layout_marginBottom="15dp"
        >

        <com.appyvet.rangebar.RangeBar
            android:id="@+id/range_bar_distance"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            custom:connectingLineColor="#54B5FC"
            custom:pinColor="#54B5FC"
            custom:rangeBar="false"
            custom:selectorColor="#54B5FC"
            custom:tickEnd="50"
            custom:tickInterval="10"
            custom:tickStart="10"/>

        <TextView
            android:id="@+id/distance_filter_caption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="25dp"
            android:paddingTop="15dp"
            android:text="@string/dtl_distance"
            android:textColor="@color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:paddingLeft="25dp"
            android:paddingTop="15dp"
            android:text="10"
            android:textColor="@color/black"
            android:textSize="14sp"
            tools:ignore="HardcodedText"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:paddingRight="20dp"
            android:paddingTop="15dp"
            android:text="50+"
            android:textColor="@color/black"
            android:textSize="14sp"
            tools:ignore="HardcodedText"
            />

    </FrameLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerViewFilters"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/footer"
        android:layout_below="@+id/distance_view_group"/>

    <RelativeLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <TextView
            android:id="@+id/apply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/textViewResetFilter"
            android:gravity="end"
            android:padding="15dp"
            android:text="@string/filter_apply_all"
            android:textColor="#025E93"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="15dp"
            android:text="@string/filter_reset_all"
            android:textColor="#025E93"
            android:textStyle="bold"/>

    </RelativeLayout>


</RelativeLayout>
