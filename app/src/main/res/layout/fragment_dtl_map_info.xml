<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/place_details_root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    >

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="@dimen/map_trip_info_size"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:orientation="vertical"
        >

        <include
            layout="@layout/layout_dtl_place_details_single_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />

        <include layout="@layout/include_dtl_place_details_category"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_map_triangle"/>
    </LinearLayout>
</FrameLayout>
