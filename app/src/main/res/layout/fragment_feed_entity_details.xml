<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:id="@+id/feedDetailsRootView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="false">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:orientation="vertical">

        <include layout="@layout/adapter_item_feed_header"/>

        <FrameLayout
            android:id="@+id/entity_content_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        </FrameLayout>

        <com.worldventures.dreamtrips.modules.feed.view.custom.FeedActionPanelView
            android:id="@+id/actionView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <FrameLayout
            android:id="@+id/entity_coments_container"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            >
        </FrameLayout>
    </LinearLayout>
</ScrollView>