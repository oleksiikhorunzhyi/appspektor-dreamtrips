<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://robobinding.org/android"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    android:background="@android:color/white">

    <RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/include"
            layout="@layout/header_profile" />

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/btn_save"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/include"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="-32dp"
            app:fab_icon="@drawable/ic_save" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/btn_save"
            android:orientation="vertical">

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/small_ic_size"
                    android:layout_height="@dimen/small_ic_size"
                    android:layout_marginLeft="@dimen/activity_vertical_margin"
                    android:src="@drawable/ic_profile_home" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    android:orientation="vertical">

                    <com.worldventures.dreamtrips.view.custom.DTEditText
                        android:id="@+id/et_from"
                        style="@style/profile_fragment_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="From"
                        app:baseColor="@android:color/black"
                        app:floatingLabel="normal"
                        app:hideUnderline="true"
                        app:primaryColor="@android:color/transparent"
                        bind:text="${from}" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@drawable/ic_profile_divider"
                        android:contentDescription="@string/empty" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/small_ic_size"
                    android:layout_height="@dimen/small_ic_size"
                    android:layout_marginLeft="@dimen/activity_vertical_margin"
                    android:src="@drawable/ic_profile_location" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    android:orientation="vertical">

                    <com.worldventures.dreamtrips.view.custom.DTEditText
                        android:id="@+id/et_live_in"
                        style="@style/profile_fragment_edit_text"
                        android:layout_height="wrap_content"
                        android:hint="Lives in"
                        app:baseColor="@android:color/black"
                        app:floatingLabel="normal"
                        app:hideUnderline="true"
                        app:primaryColor="@android:color/transparent"
                        bind:text="${livesIn}" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@drawable/ic_profile_divider"
                        android:contentDescription="@string/empty" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/ll_date_of_birth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/small_ic_size"
                    android:layout_height="@dimen/small_ic_size"
                    android:layout_marginLeft="@dimen/activity_vertical_margin"
                    android:src="@drawable/ic_profile_birthday" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    android:orientation="vertical">

                    <com.worldventures.dreamtrips.view.custom.DTEditText
                        android:id="@+id/et_date_of_birth"
                        style="@style/profile_fragment_edit_text"
                        android:hint="Date of birth"
                        android:textIsSelectable="true"
                        app:baseColor="@android:color/black"
                        app:floatingLabel="normal"
                        app:hideUnderline="true"
                        app:primaryColor="@android:color/transparent"
                        bind:text="${dateOfBirth}"
                        android:inputType="none" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@drawable/ic_profile_divider"
                        android:contentDescription="@string/empty" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/small_ic_size"
                    android:layout_height="@dimen/small_ic_size"
                    android:layout_marginLeft="@dimen/activity_vertical_margin"
                    android:src="@drawable/ic_profile_user_id" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    android:orientation="vertical">

                    <com.worldventures.dreamtrips.view.custom.DTEditText
                        android:id="@+id/et_user_id"
                        style="@style/profile_fragment_edit_text"
                        android:hint="User ID"
                        app:baseColor="@android:color/black"
                        app:floatingLabel="normal"
                        app:hideUnderline="true"
                        app:primaryColor="@android:color/transparent"
                        bind:text="${userId}" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@drawable/ic_profile_divider"
                        android:contentDescription="@string/empty" />
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>
</ScrollView>
