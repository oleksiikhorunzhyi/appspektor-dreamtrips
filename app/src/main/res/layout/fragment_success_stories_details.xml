<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      >

   <include layout="@layout/include_web_non_video" />

   <ProgressBar
         android:id="@+id/progressBarWeb"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_centerInParent="true"
         android:visibility="gone"
         />

   <LinearLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentBottom="true"
         android:layout_alignParentEnd="true"
         android:layout_alignParentRight="true"
         android:layout_margin="12dp"
         android:orientation="horizontal"
         >

      <ImageView
            android:id="@+id/iv_full_screen"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="1dp"
            android:background="@drawable/background_button"
            android:focusableInTouchMode="false"
            android:padding="6dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_fullscreen_open"
            />

      <ImageView
            android:id="@+id/iv_share"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="1dp"
            android:background="@drawable/background_button"
            android:focusableInTouchMode="false"
            android:padding="6dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_fs_share"
            />

      <ImageView
            android:id="@+id/iv_like"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="1dp"
            android:background="@drawable/background_button_right_corner"
            android:focusableInTouchMode="false"
            android:padding="6dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_trip_like_normal"
            />
   </LinearLayout>

   <include layout="@layout/include_web_video" />

</RelativeLayout>
