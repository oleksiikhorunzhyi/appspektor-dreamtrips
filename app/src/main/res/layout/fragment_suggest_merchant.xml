<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:clipToPadding="false"
            android:fillViewport="true"
            android:padding="@dimen/suggest_merchant_layout_padding"
            android:background="@color/suggest_merchant_background"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <com.worldventures.dreamtrips.modules.common.view.custom.DTEditText
            android:id="@+id/restaurantName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/SuggestMerchantInput"
            android:hint="@string/suggest_merchant_restaurant_name_hint"
            />

        <com.worldventures.dreamtrips.modules.common.view.custom.DTEditText
            android:id="@+id/contactName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/SuggestMerchantInput"
            android:hint="@string/suggest_merchant_contact_name_hint"
            />

        <com.worldventures.dreamtrips.modules.common.view.custom.DTEditText
            android:id="@+id/phoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/SuggestMerchantInput"
            android:inputType="phone"
            android:hint="@string/suggest_merchant_phone_number_hint"
            android:imeOptions="actionDone"
            android:layout_marginBottom="0dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/suggest_merchant_default_vertical_margin_big"
            android:text="@string/suggest_merchant_best_time_contact_caption"
            />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/suggest_merchant_default_vertical_margin"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/suggest_merchant_best_time_contact_from_caption"
                android:layout_gravity="center_vertical"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="50dp"
                >

                <TextView
                    android:id="@+id/fromDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="@style/SuggestMerchantFakeSpinner"
                    tools:text="Fri, Nov 25 2015"
                    android:text="Fri, Nov 25 2015"
                    />

                <TextView
                    android:id="@+id/fromTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="@style/SuggestMerchantFakeSpinner"
                    tools:text="4:30 PM"
                    android:text="4:30 PM"
                    />
            </LinearLayout>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/suggest_merchant_default_vertical_margin"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/suggest_merchant_best_time_contact_to_caption"
                android:layout_gravity="center_vertical"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="50dp"
                >

                <TextView
                    android:id="@+id/toDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="@style/SuggestMerchantFakeSpinner"
                    tools:text="Tue, Dec 7 2015"
                    android:text="Tue, Dec 7 2015"
                    />

                <TextView
                    android:id="@+id/toTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="@style/SuggestMerchantFakeSpinner"
                    tools:text="7:30 PM"
                    android:text="7:30 PM"
                    />
            </LinearLayout>
        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/suggest_merchant_rate_experience_caption"
            android:layout_marginTop="@dimen/suggest_merchant_default_vertical_margin_big"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/suggest_merchant_default_vertical_margin"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                style="@style/SuggestMerchantBigCaption"
                android:text="@string/suggest_merchant_food_caption"
                />

            <io.techery.properratingbar.ProperRatingBar
                android:id="@+id/foodRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical|right"
                app:selectedTicks="3"
                app:tickNormalDrawable="@drawable/ic_star_normal"
                app:tickSelectedDrawable="@drawable/ic_star_selected"
                app:tickSideMargin="8dp"
                app:totalTicks="5"
                app:usable="true"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/suggest_merchant_default_vertical_margin"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                style="@style/SuggestMerchantBigCaption"
                android:text="@string/suggest_merchant_service_caption"
                />

            <io.techery.properratingbar.ProperRatingBar
                android:id="@+id/serviceRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical|right"
                app:selectedTicks="3"
                app:tickNormalDrawable="@drawable/ic_star_normal"
                app:tickSelectedDrawable="@drawable/ic_star_selected"
                app:tickSideMargin="8dp"
                app:totalTicks="5"
                app:usable="true"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/suggest_merchant_default_vertical_margin"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                style="@style/SuggestMerchantBigCaption"
                android:text="@string/suggest_merchant_cleanliness_caption"
                />

            <io.techery.properratingbar.ProperRatingBar
                android:id="@+id/cleanlinessRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical|right"
                app:selectedTicks="3"
                app:tickNormalDrawable="@drawable/ic_star_normal"
                app:tickSelectedDrawable="@drawable/ic_star_selected"
                app:tickSideMargin="8dp"
                app:totalTicks="5"
                app:usable="true"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/suggest_merchant_default_vertical_margin"
            android:layout_marginBottom="0dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                style="@style/SuggestMerchantBigCaption"
                android:text="@string/suggest_merchant_uniqueness_caption"
                />

            <io.techery.properratingbar.ProperRatingBar
                android:id="@+id/uniquenessRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical|right"
                app:selectedTicks="3"
                app:tickNormalDrawable="@drawable/ic_star_normal"
                app:tickSelectedDrawable="@drawable/ic_star_selected"
                app:tickSideMargin="8dp"
                app:totalTicks="5"
                app:usable="true"
                />
        </LinearLayout>

        <com.worldventures.dreamtrips.modules.common.view.custom.DTEditText
            android:id="@+id/additionalInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/SuggestMerchantInput"
            android:singleLine="false"
            android:minLines="3"
            android:maxLines="3"
            android:gravity="top|left"
            app:met_minCharacters="0"
            app:met_maxCharacters="120"
            app:met_checkCharactersCountAtBeginning="true"
            android:hint="@string/suggest_merchant_additional_info_caption"
            android:layout_marginTop="@dimen/suggest_merchant_default_vertical_margin_big"
            android:layout_marginBottom="0dp"
            android:imeOptions="actionDone"
            />

        <Button
            android:id="@+id/submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/suggest_merchant_default_vertical_margin_big"
            android:text="@string/suggest_merchant_submit_button_caption"
            android:layout_gravity="right"
            />
    </LinearLayout>
</ScrollView>
