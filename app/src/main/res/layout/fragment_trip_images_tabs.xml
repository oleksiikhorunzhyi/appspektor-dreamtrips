<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:fab="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <com.worldventures.dreamtrips.modules.common.view.custom.BadgedTabLayout
            android:id="@+id/tabs"
            style="@style/DreamTabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/tab_background_color"/>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/appbar"
        android:background="@android:color/white"/>

    <View
        android:id="@+id/v_bg_holder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_semi_transparent"
        android:clickable="true"
        android:visibility="gone"/>

    <com.getbase.floatingactionbutton.FloatingActionsMenu
        android:id="@+id/multiple_actions_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/pager"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        fab:fab_addButtonColorNormal="@color/theme_main_darker"
        fab:fab_colorNormal="@color/theme_main"
        fab:fab_colorPressed="@color/theme_main_darker"
        fab:fab_labelStyle="@style/menu_labels_style">

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_facebook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_addButtonColorNormal="@color/theme_main_darker"
            fab:fab_colorNormal="@color/theme_main"
            fab:fab_colorPressed="@color/theme_main_darker"
            fab:fab_icon="@drawable/ic_fab_facebook"
            fab:fab_title="@string/choose_fb"/>

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_gallery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_addButtonColorNormal="@color/theme_main_darker"
            fab:fab_colorNormal="@color/theme_main"
            fab:fab_colorPressed="@color/theme_main_darker"
            fab:fab_icon="@drawable/ic_fab_gallery"
            fab:fab_title="@string/choose_gallery"/>

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_addButtonColorNormal="@color/theme_main_darker"
            fab:fab_colorNormal="@color/theme_main"
            fab:fab_colorPressed="@color/theme_main_darker"
            fab:fab_icon="@drawable/ic_fab_photo"
            fab:fab_title="@string/choose_camera"/>

    </com.getbase.floatingactionbutton.FloatingActionsMenu>

</RelativeLayout>