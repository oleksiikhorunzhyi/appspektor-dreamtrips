<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      >

   <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_gravity="right"
         android:layout_marginEnd="12dp"
         android:gravity="right"
         android:orientation="horizontal"
         >

      <TextView
            android:id="@+id/tv_min_chars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/review_min_char"
            android:textSize="@dimen/limit_chars_style"
            />

      <TextView
            android:id="@+id/tv_max_chars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_left_char"
            android:text="@string/review_max_char"
            android:textSize="@dimen/limit_chars_style"
            />
   </LinearLayout>

   <View
         android:layout_width="match_parent"
         android:layout_height="@dimen/spacing_tiniest"
         android:layout_marginTop="10dp"
         android:background="@color/reviews_line_separator"
         android:paddingBottom="15dp"
         />

   <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         >

      <LinearLayout
            android:id="@+id/container_add_photos_and_videos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

         <ImageView
               android:layout_width="24dp"
               android:layout_height="27dp"
               android:layout_gravity="center_vertical"
               android:layout_marginLeft="15dp"
               android:layout_marginTop="5dp"
               android:gravity="center_vertical"
               android:src="@drawable/share_photos_icon"
               />

         <TextView
               android:id="@+id/tv_add_photos_and_videos"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="center_vertical"
               android:layout_marginLeft="4dp"
               android:layout_marginTop="5dp"
               android:gravity="center_vertical"
               android:text="@string/text_add_photos_and_videos"
               android:textSize="@dimen/add_photos_text_size"
               android:textStyle="bold"
               />
      </LinearLayout>

      <TextView
            android:id="@+id/tv_char_counter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:gravity="right|center_vertical"
            android:text="0"
            android:textSize="@dimen/limit_chars_style"
            android:textStyle="bold"
            />
   </LinearLayout>

</LinearLayout>