<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:visibility="gone"
              android:background="@color/profile_background"
              android:orientation="vertical"
              tools:showIn="@layout/fragment_profile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/small_ic_size"
            android:layout_height="@dimen/small_ic_size"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:layout_marginTop="3dp"
            android:src="@drawable/ic_profile_home"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="16dp"
            android:orientation="vertical">

            <com.worldventures.dreamtrips.modules.common.view.custom.DTEditText
                android:id="@+id/et_from"
                style="@style/profile_fragment_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:hint="@string/profile_from_hint"
                app:baseColor="@android:color/black"
                app:floatingLabel="normal"
                app:hideUnderline="true"
                app:primaryColor="@android:color/transparent"/>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/small_ic_size"
            android:layout_height="@dimen/small_ic_size"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:layout_marginTop="3dp"
            android:src="@drawable/ic_profile_location"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="16dp"
            android:orientation="vertical">

            <com.worldventures.dreamtrips.modules.common.view.custom.DTEditText
                android:id="@+id/et_live_in"
                style="@style/profile_fragment_edit_text"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:hint="@string/profile_location_hint"
                app:baseColor="@android:color/black"
                app:floatingLabel="normal"
                app:hideUnderline="true"
                app:primaryColor="@android:color/transparent"/>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_date_of_birth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/small_ic_size"
            android:layout_height="@dimen/small_ic_size"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:layout_marginTop="3dp"
            android:src="@drawable/ic_profile_birthday"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="16dp"
            android:orientation="vertical">

            <com.worldventures.dreamtrips.modules.common.view.custom.DTEditText
                android:id="@+id/et_date_of_birth"
                style="@style/profile_fragment_edit_text"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:hint="@string/profile_birth_hint"
                android:inputType="none"
                android:textIsSelectable="true"
                app:baseColor="@android:color/black"
                app:floatingLabel="normal"
                app:hideUnderline="true"
                app:primaryColor="@android:color/transparent"/>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/small_ic_size"
            android:layout_height="@dimen/small_ic_size"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:layout_marginTop="3dp"
            android:src="@drawable/ic_profile_user_id"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="16dp"
            android:orientation="vertical">

            <com.worldventures.dreamtrips.modules.common.view.custom.DTEditText
                android:id="@+id/et_user_id"
                style="@style/profile_fragment_edit_text"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:hint="@string/profile_user_id_hint"
                app:baseColor="@android:color/black"
                app:floatingLabel="normal"
                app:hideUnderline="true"
                app:primaryColor="@android:color/transparent"/>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>