<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:app="http://schemas.android.com/apk/res-auto"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      >

   <Button
         android:id="@+id/payment_done_button"
         android:layout_width="250dp"
         android:layout_height="wrap_content"
         android:layout_marginBottom="58dp"
         android:layout_marginEnd="8dp"
         android:layout_marginLeft="8dp"
         android:layout_marginRight="8dp"
         android:layout_marginStart="8dp"
         android:textColor="@android:color/white"
         android:textSize="16sp"
         android:text="@string/btn_payment_done_pilot"
         app:layout_constraintBottom_toBottomOf="parent"
         app:layout_constraintLeft_toLeftOf="parent"
         app:layout_constraintRight_toRightOf="parent"
         />

   <TextView
         android:id="@+id/tv_thank_you_pilot"
         android:layout_width="300dp"
         android:layout_height="wrap_content"
         android:layout_marginEnd="8dp"
         android:layout_marginLeft="8dp"
         android:layout_marginRight="8dp"
         android:layout_marginStart="8dp"
         android:layout_marginTop="33dp"
         android:fontFamily="sans-serif"
         android:text="@string/first_failure_text_thrst_pilot"
         android:textColor="#4a4a4a"
         android:textSize="26sp"
         android:gravity="center_horizontal"
         android:textStyle="bold"
         app:layout_constraintLeft_toLeftOf="parent"
         app:layout_constraintRight_toRightOf="parent"
         app:layout_constraintTop_toTopOf="parent"
         />

   <TextView
         android:id="@+id/tv_payment_status_pilot"
         android:layout_width="274dp"
         android:layout_height="wrap_content"
         android:layout_marginTop="14dp"
         android:textSize="16sp"
         android:fontFamily="sans-serif"
         android:text="@string/payment_error_status_pilot"
         android:textStyle="normal"
         android:textColor="#4a4a4a"
         android:gravity="center_horizontal"
         app:layout_constraintLeft_toLeftOf="parent"
         app:layout_constraintRight_toRightOf="parent"
         app:layout_constraintTop_toBottomOf="@+id/tv_payment_sub_thank_you_message_pilot"
         />

   <TextView
         android:id="@+id/tv_payment_sub_thank_you_message_pilot"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="@string/second_failure_text_thrst_pilot"
         android:textSize="18sp"
         android:fontFamily="sans-serif"
         android:textStyle="bold"
         android:textColor="#4a4a4a"
         android:gravity="center_horizontal"
         android:layout_marginLeft="8dp"
         app:layout_constraintLeft_toLeftOf="parent"
         android:layout_marginRight="8dp"
         app:layout_constraintRight_toRightOf="parent"
         android:layout_marginTop="1dp"
         app:layout_constraintTop_toBottomOf="@+id/tv_thank_you_pilot"
         />

   <android.support.v7.widget.CardView
         android:layout_width="250dp"
         android:layout_height="160dp"
         android:layout_marginLeft="8dp"
         android:layout_marginRight="8dp"
         android:layout_marginTop="53dp"
         android:visibility="visible"
         app:cardCornerRadius="4dp"
         app:layout_constraintLeft_toLeftOf="parent"
         app:layout_constraintRight_toRightOf="parent"
         app:layout_constraintTop_toBottomOf="@+id/tv_payment_status_pilot"
         >

      <ImageView
            android:id="@+id/iv_status_payment_pilot"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="27dp"
            android:src="@drawable/check_succes_pilot"
            />

      <TextView
            android:id="@+id/tv_total_charged_value_pilot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_marginStart="96dp"
            android:layout_marginTop="27dp"
            android:fontFamily="sans-serif"
            android:text="$ 42.78"
            android:textColor="#4a4a4a"
            android:textSize="28sp"
            android:textStyle="normal"
            />

      <TextView
            android:id="@+id/tv_total_charged_text_pilot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="96dp"
            android:layout_marginTop="62dp"
            android:textColor="#4a4a4a"
            android:textSize="14sp"
            />

      <TextView
            android:id="@+id/tv_payment_resume_text_pilot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="36dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="93dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:textColor="#4a4a4a"
            android:textSize="16sp"
            android:textStyle="normal"
            />
   </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>
