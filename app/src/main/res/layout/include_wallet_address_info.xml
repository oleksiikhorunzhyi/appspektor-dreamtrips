<RelativeLayout android:id="@+id/address_info_container"
      xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:tools="http://schemas.android.com/tools"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      tools:theme="@style/WalletTheme.DetailsTheme"
      >

   <EditText
         android:id="@+id/address1"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_alignParentEnd="true"
         android:layout_alignParentRight="true"
         android:hint="@string/wallet_add_card_details_hint_address1"
         android:singleLine="true"
         />

   <EditText
         android:id="@+id/address2"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_alignParentEnd="true"
         android:layout_alignParentRight="true"
         android:layout_below="@+id/address1"
         android:layout_marginTop="@dimen/wallet_add_card_details_edittext_margin_top"
         android:hint="@string/wallet_add_card_details_hint_address2"
         android:singleLine="true"
         />

   <EditText
         android:id="@+id/city"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_alignParentEnd="true"
         android:layout_alignParentRight="true"
         android:layout_below="@+id/address2"
         android:layout_marginTop="@dimen/wallet_add_card_details_edittext_margin_top"
         android:hint="@string/wallet_add_card_details_hint_city"
         android:singleLine="true"
         />

   <LinearLayout
         android:id="@+id/state_zip_container"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_alignParentLeft="true"
         android:layout_alignParentStart="true"
         android:layout_below="@+id/city"
         android:layout_marginTop="@dimen/wallet_add_card_details_edittext_margin_top"
         android:orientation="horizontal"
         >

      <EditText
            android:id="@+id/state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_weight="1"
            android:hint="@string/wallet_add_card_details_hint_state"
            android:singleLine="true"
            />

      <EditText
            android:id="@+id/zip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:hint="@string/wallet_add_card_details_hint_zip"
            android:inputType="number"
            android:maxLength="5"
            android:singleLine="true"
            />

   </LinearLayout>

   <CheckBox
         android:id="@+id/set_default_address_checkBox"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentLeft="true"
         android:layout_alignParentStart="true"
         android:layout_below="@+id/state_zip_container"
         android:layout_marginTop="@dimen/wallet_add_card_details_component_margin_top"
         android:checked="false"
         android:text="@string/wallet_add_card_details_option_set_as_default_address"
         />

</RelativeLayout>