<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:app="http://schemas.android.com/apk/res-auto"
      xmlns:tools="http://schemas.android.com/tools"
      >

   <data>

      <variable
            name="merchant"
            type="com.worldventures.dreamtrips.wallet.ui.settings.help.feedback.payment.model.MerchantViewModel"
            />
   </data>

   <android.support.constraint.ConstraintLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:background="@android:color/white"
         android:orientation="vertical"
         android:paddingBottom="@dimen/spacing_normal"
         android:theme="@style/WalletTheme"
         >

      <TextView
            android:id="@+id/textVieww3"
            style="@style/WalletTheme.PaymentFeedbackSubjectView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/wallet_payment_feedback_merchant_label"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />


      <TextView
            android:id="@+id/tv_merchant_type_title"
            style="@style/WalletTheme.PaymentFeedbackSecondaryText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/wallet_payment_feedback_merchant_type_label"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textVieww3"
            />

      <Spinner
            android:id="@+id/s_merchant_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:entries="@array/wallet_payment_feedback_merchant"
            android:minHeight="38dp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_merchant_type_title"
            tools:listitem="@layout/wallet_item_merchant_type"
            />

      <View
            android:id="@+id/view4"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginEnd="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginStart="16dp"
            android:background="@color/wallet_bottom_line_fields_payment_feedback"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/s_merchant_type"
            />

      <TextView
            android:id="@+id/tv_merchant_name_title"
            style="@style/WalletTheme.PaymentFeedbackSecondaryText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/wallet_payment_feedback_merchant_name_label"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view4"
            />

      <EditText
            android:id="@+id/et_merchant_name"
            style="@style/WalletTheme.PaymentFeedbackEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginStart="16dp"
            android:drawableEnd="@drawable/ic_wallet_pencil"
            android:hint="@string/wallet_payment_feedback_merchant_name_hint"
            android:text="@={merchant.merchantName}"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_merchant_name_title"
            />

      <TextView
            android:id="@+id/textView3"
            style="@style/WalletTheme.PaymentFeedbackSecondaryText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/wallet_payment_feedback_merchant_location_label"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_merchant_name"
            />

      <EditText
            android:id="@+id/et_address_line_1"
            style="@style/WalletTheme.PaymentFeedbackEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginStart="16dp"
            android:drawableEnd="@drawable/ic_wallet_pencil"
            android:hint="@string/wallet_payment_feedback_merchant_address_1_label"
            android:text="@={merchant.addressLine1}"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            />

      <EditText
            android:id="@+id/et_address_line_2"
            style="@style/WalletTheme.PaymentFeedbackEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:drawableEnd="@drawable/ic_wallet_pencil"
            android:hint="@string/wallet_payment_feedback_merchant_address_2_label"
            android:text="@={merchant.addressLine2}"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_address_line_1"
            />

      <EditText
            android:id="@+id/city"
            style="@style/WalletTheme.PaymentFeedbackEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:drawableEnd="@drawable/ic_wallet_pencil"
            android:drawablePadding="2dp"
            android:hint="@string/wallet_payment_feedback_merchant_address_city_label"
            android:importantForAccessibility="no"
            android:text="@={merchant.city}"
            app:layout_constraintHorizontal_bias="0.51"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintHorizontal_weight="0.45"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/state"
            app:layout_constraintTop_toBottomOf="@+id/et_address_line_2"
            />

      <EditText
            android:id="@+id/state"
            style="@style/WalletTheme.PaymentFeedbackEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:drawableEnd="@drawable/ic_wallet_pencil"
            android:drawablePadding="2dp"
            android:gravity="center_horizontal"
            android:hint="@string/wallet_payment_feedback_merchant_address_tx_label"
            android:importantForAccessibility="no"
            android:maxLength="2"
            android:text="@={merchant.state}"
            app:layout_constraintBaseline_toBaselineOf="@+id/city"
            app:layout_constraintHorizontal_weight="0.25"
            app:layout_constraintLeft_toRightOf="@+id/city"
            app:layout_constraintRight_toLeftOf="@+id/zip"
            />

      <EditText
            android:id="@+id/zip"
            style="@style/WalletTheme.PaymentFeedbackEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:drawableEnd="@drawable/ic_wallet_pencil"
            android:drawablePadding="2dp"
            android:gravity="center_horizontal"
            android:hint="@string/wallet_payment_feedback_merchant_address_zip_label"
            android:imeOptions="actionDone"
            android:importantForAccessibility="no"
            android:inputType="number"
            android:maxLength="5"
            android:text="@={merchant.zip}"
            app:layout_constraintBaseline_toBaselineOf="@+id/state"
            app:layout_constraintHorizontal_weight="0.3"
            app:layout_constraintLeft_toRightOf="@+id/state"
            app:layout_constraintRight_toRightOf="parent"
            />

   </android.support.constraint.ConstraintLayout>
</layout>