<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:app="http://schemas.android.com/apk/res-auto"
      >

   <data>

      <variable
            name="paymentTerminal"
            type="com.worldventures.dreamtrips.wallet.ui.settings.help.feedback.payment.model.PaymentTerminalViewModel"
            />
   </data>

   <android.support.constraint.ConstraintLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:background="@android:color/white"
         android:orientation="vertical"
         android:theme="@style/WalletTheme"
         >

      <TextView
            android:id="@+id/textView16"
            style="@style/WalletTheme.PaymentFeedbackSubjectView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/wallet_payment_feedback_payment_terminal_label"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

      <TextView
            android:id="@+id/textView17"
            style="@style/WalletTheme.PaymentFeedbackSecondaryText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/wallet_payment_feedback_payment_terminal_name_model"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView16"
            />

      <EditText
            android:id="@+id/et_terminal_name_model"
            style="@style/WalletTheme.PaymentFeedbackEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginStart="16dp"
            android:drawableEnd="@drawable/ic_wallet_pencil"
            android:hint="@string/wallet_payment_feedback_enter_name_model_hint"
            android:text="@={paymentTerminal.terminalNameModel}"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView17"
            />

      <TextView
            android:id="@+id/textView18"
            style="@style/WalletTheme.PaymentFeedbackSecondaryText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/wallet_payment_feedback_how_pay_label"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_terminal_name_model"
            />

      <RadioGroup
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView18"
            app:layout_constraintVertical_bias="0.0"
            >

         <RadioButton
               android:id="@+id/rb_magnetic_swipe"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:checked="@={paymentTerminal.magneticSwipe}"
               android:text="@string/wallet_payment_feedback_magnetic_swipe_label"
               android:textSize="@dimen/font_normal"
               app:buttonTint="?attr/colorPrimary"
               />

         <TextView
               style="@style/WalletTheme.PaymentFeedbackSecondaryText"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:paddingLeft="@dimen/spacing_extra_large"
               android:text="@string/wallet_payment_feedback_magnetic_swipe_description"
               android:textSize="@dimen/font_medium"
               />

         <RadioButton
               android:id="@+id/rb_wireless_magnetic"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:checked="@{!paymentTerminal.magneticSwipe}"
               android:text="@string/wallet_payment_feedback_wireless_magnetic_label"
               android:textSize="@dimen/font_normal"
               app:buttonTint="?attr/colorPrimary"
               />

         <TextView
               style="@style/WalletTheme.PaymentFeedbackSecondaryText"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:paddingLeft="@dimen/spacing_extra_large"
               android:text="@string/wallet_payment_feedback_wireless_magnetic_description"
               android:textSize="@dimen/font_medium"
               />

      </RadioGroup>

   </android.support.constraint.ConstraintLayout>
</layout>