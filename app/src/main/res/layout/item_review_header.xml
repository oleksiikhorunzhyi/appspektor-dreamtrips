<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
      android:layout_width="match_parent"
      android:layout_height="wrap_content" >

   <TextView
         android:id="@+id/user_comment"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_gravity="center_horizontal"
         android:layout_marginRight="@dimen/dtl_item_review_images_comment_margin"
         android:layout_marginLeft="@dimen/dtl_item_review_images_comment_margin"
         android:layout_marginTop="@dimen/dtl_all_reviews_margin_small"
         android:ellipsize="end"
         android:maxLength="200"
         android:textColor="@color/rating_normal"
         android:textSize="@dimen/dtl_all_reviews_text" />

</LinearLayout>