<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/rootView"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:id="@+id/aditional_cover"
        android:src="@drawable/ic_cover_place_holder"
        android:scaleType="centerCrop"/>

    <ScrollView
        android:id="@+id/contentView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/layout_cover_details"/>

            <LinearLayout
                android:id="@+id/diningContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp">

                <com.worldventures.dreamtrips.modules.bucketlist.view.custom.TagViewGroup

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/diningName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_dining_dining"
                        android:drawablePadding="8dp"
                        android:gravity="center"
                        android:padding="4dp"
                        tools:text="Cafe and French"/>

                    <TextView
                        android:id="@+id/diningPriceRange"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:drawablePadding="8dp"

                        android:gravity="center"
                        tools:text="NULL"/>

                </com.worldventures.dreamtrips.modules.bucketlist.view.custom.TagViewGroup>

                <TextView
                    android:id="@+id/diningAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    android:drawablePadding="8dp"
                    android:padding="4dp"
                    tools:text="123 boulevard Saint-Germain, 95044 Ukraine, Crimea"/>

                <View
                    android:id="@+id/diningDivider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="32dp"
                    android:layout_marginTop="4dp"
                    android:background="@color/gray_lighter"/>

                <com.worldventures.dreamtrips.modules.bucketlist.view.custom.TagViewGroup
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/diningSite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_dining_pointer"
                        android:drawablePadding="8dp"
                        android:gravity="center"
                        android:padding="4dp"

                        tools:text="www.cafedefore.ukoz.ru"/>


                    <TextView
                        android:id="@+id/diningPhone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_dining_phone"
                        android:drawablePadding="8dp"
                        android:gravity="center"
                        android:padding="4dp"
                        tools:text="+33 1 45 48 55"/>

                </com.worldventures.dreamtrips.modules.bucketlist.view.custom.TagViewGroup>
            </LinearLayout>

            <include layout="@layout/include_bucket_item_meta"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#EFEFEF"/>

            <TextView
                android:id="@+id/textViewDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/pictures_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="@string/my_pictures"
                android:textColor="@android:color/black"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginBottom="8dp"
                android:orientation="vertical">

                <com.worldventures.dreamtrips.modules.bucketlist.view.custom.BucketPhotosView
                    android:id="@+id/bucket_photos"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="16dp"
                    android:overScrollMode="never"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">

                <CheckBox
                    android:id="@+id/checkBoxDone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bucket_item_edit_completed"/>

            </LinearLayout>


        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/controllerWrapper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_margin="12dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/bucketItemDelete"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="1dp"
            android:background="@drawable/background_button"
            android:focusableInTouchMode="false"
            android:padding="6dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_bucket_item_delete"/>

        <ImageView
            android:id="@+id/bucketItemShare"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="1dp"
            android:background="@drawable/background_button"
            android:focusableInTouchMode="false"
            android:padding="6dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_fs_share"/>

        <ImageView
            android:id="@+id/bucketItemEdit"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="1dp"
            android:background="@drawable/background_button_right_corner"
            android:focusableInTouchMode="false"
            android:padding="6dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_bucket_edit"/>
    </LinearLayout>

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_actionbar"
        style="@style/ToolBarStyle"
        android:layout_width="match_parent"
        android:background="@android:color/transparent"/>

</RelativeLayout>