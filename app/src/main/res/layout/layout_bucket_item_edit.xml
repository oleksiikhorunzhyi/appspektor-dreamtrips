<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:material="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin">

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/editTextTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/bucket_hint_title"
        android:imeOptions="actionDone"
        android:singleLine="true"
        android:textColor="#3f3f3f"
        android:textColorHint="#979797"
        app:baseColor="@color/theme_main_darker"
        app:floatingLabel="highlight"
        app:hintColor="@android:color/white"
        app:primaryColor="@color/theme_main_darker" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/editTextDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/bucket_hint_description"
        android:imeOptions="actionDone"
        android:singleLine="true"
        android:textColor="#3f3f3f"
        android:textColorHint="#979797"
        app:baseColor="@color/theme_main_darker"
        app:floatingLabel="highlight"
        app:hintColor="@android:color/white"
        app:primaryColor="@color/theme_main_darker" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/editTextTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/bucket_hint_time"
        android:imeOptions="actionDone"
        android:singleLine="true"
        android:textColor="#3f3f3f"
        android:textColorHint="#979797"
        app:baseColor="@color/theme_main_darker"
        app:floatingLabel="highlight"
        app:hintColor="@android:color/white"
        app:primaryColor="@color/theme_main_darker" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/editTextLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/bucket_hint_location"
        android:imeOptions="actionDone"
        android:singleLine="true"
        android:textColor="#3f3f3f"
        android:textColorHint="#979797"
        app:baseColor="@color/theme_main_darker"
        app:floatingLabel="highlight"
        app:hintColor="@android:color/white"
        app:primaryColor="@color/theme_main_darker" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/editTextPeople"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/bucket_hint_people"
        android:imeOptions="actionDone"
        android:singleLine="true"
        android:textColor="#3f3f3f"
        android:textColorHint="#979797"
        app:baseColor="@color/theme_main_darker"
        app:floatingLabel="highlight"
        app:hintColor="@android:color/white"
        app:primaryColor="@color/theme_main_darker" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/editTextTags"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/bucket_hint_tags"
        android:imeOptions="actionDone"
        android:singleLine="true"
        android:textColor="#3f3f3f"
        android:textColorHint="#979797"
        app:baseColor="@color/theme_main_darker"
        app:floatingLabel="highlight"
        app:hintColor="@android:color/black"
        app:maxCharacters="120"
        app:minCharacters="0"
        app:primaryColor="@color/theme_main_darker" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.gc.materialdesign.views.CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:text="@string/bucket_item_edit_completed"/>

    </LinearLayout>

</LinearLayout>