<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="@dimen/messenger_connection_overlay_height"
              android:layout_gravity="top"
              android:background="@color/white">
    <FrameLayout
        android:id="@+id/messenger_connection_overlay_disconnected_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:text="@string/disconnected_overlay_disconnected_message"
            android:textSize="@dimen/messenger_connection_overlay_message_text_size"
            android:textColor="@color/disconnected_overlay_text_color"
            android:gravity="center"/>
        <ImageButton
            android:id="@+id/messenger_reconnect_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:src="@drawable/connection_lost"
            android:padding="@dimen/messenger_connection_overlay_message_text_size"
            android:background="@null"/>
    </FrameLayout>
    <RelativeLayout
        android:id="@+id/messenger_connection_overlay_connecting_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ProgressBar
            android:id="@+id/messenger_connection_connecting_progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            style="?android:attr/android:progressBarStyleSmall"
            android:layout_toLeftOf="@+id/messenger_connection_connecting_textview"
            android:layout_marginRight="@dimen/messenger_connection_overlay_progress_bar_right_margin"/>
        <TextView
            android:id="@+id/messenger_connection_connecting_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/disconnected_overlay_connecting_message"
            android:textSize="@dimen/messenger_connection_overlay_message_text_size"
            android:textColor="@color/connecting_overlay_text_color"
            android:gravity="center"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>