<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="@dimen/disconnected_overlay_height"
              android:layout_gravity="top"
              android:background="@color/white">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="@string/disconnected_overlay_message"
        android:textSize="@dimen/disconnected_overlay_message_text_size"
        android:textColor="@color/disconnected_overlay_text_color"
        android:gravity="center"/>
    <ImageButton
        android:id="@+id/messenger_reconnect_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|right"
        android:src="@drawable/connection_lost"
        android:padding="@dimen/disconnected_overlay_reconnect_button_padding"
        android:background="@null"/>
</android.support.v7.widget.CardView>