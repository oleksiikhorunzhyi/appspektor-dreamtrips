<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:tools="http://schemas.android.com/tools"
       android:layout_width="match_parent"
       android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/new_chat_toolbar"
        style="@style/ToolBarStyle"
        />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        >

        <FrameLayout
            android:id="@+id/new_chat_content_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="1"
                >

                <LinearLayout
                    android:id="@+id/new_chat_conversation_name_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/new_chat_conversation_name"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/new_chat_content_header_size"
                        android:layout_gravity="center_vertical"
                        android:background="@color/main_background"
                        android:hint="@string/new_chat_new_conversation_title_hint"
                        android:imeOptions="actionDone"
                        android:maxLines="1"
                        android:paddingLeft="@dimen/activity_horizontal_margin"
                        android:paddingRight="@dimen/activity_horizontal_margin"
                        android:singleLine="true"
                        android:textColor="@color/new_chat_header_text_color"
                        android:textColorHint="@color/new_chat_header_text_color"
                        android:textSize="@dimen/new_chat_name_conversation_name_text_size"
                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/list_item_divider_color"
                        />

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:layout_weight="0">

                    <EditText
                        android:id="@+id/new_chat_chosen_contacts_count_editText"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/new_chat_content_header_size"
                        style="@style/NewChatMembersEditText"
                        />

                    <com.messenger.ui.widget.SelectionListenerEditText
                        android:id="@+id/new_chat_chosen_contacts_edittext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="@dimen/new_chat_content_header_size"
                        android:layout_toRightOf="@+id/new_chat_chosen_contacts_count_editText"
                        android:paddingLeft="@dimen/new_chat_name_chosen_contacts_left_margin"
                        android:inputType="textMultiLine|textFilter|textNoSuggestions"
                        style="@style/NewChatMembersEditText"
                        />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_weight="0"
                    android:background="@color/list_item_divider_color"
                    />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/new_chat_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    />
            </LinearLayout>
        </FrameLayout>

        <TextView
            android:id="@+id/new_chat_error_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/new_chat_error_loading_contacts"
            />

        <ProgressBar
            android:id="@+id/new_chat_loading_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/new_chat_progress_bar_margin_top"
            />
    </FrameLayout>

</merge>