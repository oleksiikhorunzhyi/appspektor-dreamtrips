<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
       android:layout_width="@dimen/tag_common_width"
       android:layout_height="@dimen/tag_common_height">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/tag_common_height"
        android:background="@drawable/background_common_tag_view"
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        android:paddingRight="10dp">

        <TextView
            android:id="@+id/tagged_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_medium"/>

        <View
            android:id="@+id/tagged_user_delete_tag_divider"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginLeft="5dp"
            android:background="@color/tag_view_background_border"
            android:visibility="gone" />

        <View
            android:id="@+id/tagged_user_delete_tag"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="right|center_vertical"
            android:layout_marginLeft="5dp"
            android:background="@drawable/ic_close_tag"
            android:visibility="gone" />
    </LinearLayout>

</RelativeLayout>