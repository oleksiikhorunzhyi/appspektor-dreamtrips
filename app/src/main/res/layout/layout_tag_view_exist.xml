<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="@dimen/tag_common_width"
        android:layout_height="@dimen/tag_common_height"
        android:background="@drawable/background_common_tag_view"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/tagged_user_photo"
            android:layout_width="@dimen/tag_common_photo_size"
            android:layout_height="@dimen/tag_common_photo_size"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:id="@+id/tagged_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:textColor="@android:color/white"/>

        <Button
            android:id="@+id/tagged_user_delete_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:background="@null"
            android:padding="0dp"
            android:text="X"
            android:textColor="@android:color/white"
            android:visibility="invisible"/>

    </LinearLayout>

</merge>