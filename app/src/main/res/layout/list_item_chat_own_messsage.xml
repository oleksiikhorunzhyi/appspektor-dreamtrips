<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include layout="@layout/list_item_chat_date_entry"/>

    <RelativeLayout
        android:id="@+id/chat_message_container"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/chat_list_item_vertical_padding"
        android:paddingLeft="@dimen/chat_list_item_horizontal_padding"
        android:paddingRight="@dimen/chat_list_item_horizontal_padding"
        android:paddingTop="@dimen/chat_list_item_vertical_padding"
        >

        <TextView
            android:id="@+id/chat_message"
            style="@style/ChatMessageTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/chat_color_message_own"
            android:textIsSelectable="true"
            tools:textColor="@color/black"
            tools:text="MESSAGES"
            />

        <ViewSwitcher
            android:id="@+id/view_switcher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/chat_message"
            android:layout_alignRight="@+id/chat_message"
            android:layout_below="@+id/chat_message"
            android:paddingEnd="@dimen/spacing_small"
            android:paddingRight="@dimen/spacing_small"
            android:paddingTop="@dimen/spacing_tiny"

            android:visibility="gone"
            tools:visibility="visible">

            <ImageView
                android:id="@+id/iv_message_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_error_red_400_18dp"
                tools:ignore="ContentDescription"/>

            <ProgressBar
                android:id="@+id/progress_bar"
                style="?android:attr/progressBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"/>
        </ViewSwitcher>

    </RelativeLayout>
</LinearLayout>