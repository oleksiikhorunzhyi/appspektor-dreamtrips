<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/new_chat_list_item_vertical_padding"
        android:paddingBottom="@dimen/new_chat_list_item_vertical_padding"
        android:paddingLeft="@dimen/new_chat_list_item_horizontal_padding"
        android:paddingRight="@dimen/new_chat_list_item_horizontal_padding"
        >
        <com.makeramen.roundedimageview.RoundedImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/contact_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="centerCrop"
            app:riv_oval="true"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            >
            <TextView
                android:id="@+id/contact_name_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="@color/contact_list_item_contact_name"
                android:textSize="@dimen/new_chat_list_item_contact_text_size"
                />
            <ImageView
                android:id="@+id/contact_chat_online_status_image_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/circle_green_small"
                android:layout_gravity="center"
                android:padding="10dp"
                />
        </LinearLayout>
        <ImageView
            android:id="@+id/contact_chat_tick_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:layout_gravity="center"
            android:src="@drawable/selectable_new_chat_tick"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/contact_list_item_contacts_divider"
        />
</LinearLayout>