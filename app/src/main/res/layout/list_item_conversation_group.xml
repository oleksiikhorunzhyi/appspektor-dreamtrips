<com.daimajia.swipe.SwipeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:id="@+id/swipe">

    <include layout="@layout/list_item_conversation_swappable_action_buttons"/>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/conversation_item_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/conversation_list_item_vertical_padding"
        android:paddingLeft="@dimen/conversation_list_item_horizontal_padding"
        android:paddingRight="@dimen/conversation_list_item_horizontal_padding"
        android:paddingTop="@dimen/conversation_list_item_vertical_padding"
        >

        <com.messenger.ui.widget.GroupAvatarsView
            android:id="@+id/conversation_group_avatars_view"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            style="@style/GroupChatBigAvatarView"/>

        <TextView
            android:id="@+id/conversation_name_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/conversation_group_avatars_view"
            android:layout_toLeftOf="@+id/conversation_last_messages_layout"
            style="@style/ConversationListNameTextView"
            />

        <TextView
            android:id="@+id/conversation_last_message_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/conversation_name_textview"
            android:layout_below="@+id/conversation_name_textview"
            android:layout_toLeftOf="@+id/conversation_last_messages_layout"
            style="@style/ConversationListLastMessageTextView"
            />

        <RelativeLayout
            android:id="@+id/conversation_last_messages_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/conversation_name_textview"
            android:layout_marginRight="@dimen/conversation_list_item_conversation_last_message_date_textview_right_margin"
            >

            <TextView
                android:id="@+id/conversation_abandoned_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/conversation_list_abandoned"
                android:layout_marginRight="@dimen/spacing_small"
                android:visibility="gone"
                />

            <TextView
                android:layout_alignBaseline="@+id/conversation_abandoned_status"
                android:id="@+id/conversation_last_message_date_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_toRightOf="@+id/conversation_abandoned_status"
                style="@style/ConversationListLastMessageDateTextView"
                tools:text="yesterday"
                />

            <TextView
                android:id="@+id/conversation_unread_messages_count_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/conversation_last_message_date_textview"
                android:gravity="center_horizontal"
                android:layout_alignRight="@+id/conversation_last_message_date_textview"
                style="@style/ConversationListUnreadMessagesCountTextView"
                />
        </RelativeLayout>

    </RelativeLayout>

</com.daimajia.swipe.SwipeLayout>