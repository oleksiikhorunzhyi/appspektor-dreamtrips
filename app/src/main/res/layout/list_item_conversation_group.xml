<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/conversation_list_item_vertical_padding"
    android:paddingLeft="@dimen/conversation_list_item_horizontal_padding"
    android:paddingRight="@dimen/conversation_list_item_horizontal_padding"
    android:paddingTop="@dimen/conversation_list_item_vertical_padding"
    >

    <com.messenger.ui.widget.GroupAvatarsView
        android:id="@+id/conversation_group_avatars_view"
        android:layout_width="@dimen/list_item_avatar_image_view_size"
        android:layout_height="@dimen/list_item_avatar_image_view_size"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        />

    <TextView
        android:id="@+id/conversation_name_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/conversation_list_item_conversation_name_textview_left_margin"
        android:layout_marginTop="@dimen/conversation_list_item_conversation_name_textview_top_margin"
        android:layout_toRightOf="@+id/conversation_group_avatars_view"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:textColor="@color/list_item_text_color"
        android:textSize="@dimen/list_item_title_text_size"
        />

    <TextView
        android:id="@+id/conversation_last_message_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/conversation_name_textview"
        android:layout_below="@+id/conversation_name_textview"
        android:layout_marginTop="@dimen/conversation_list_item_conversation_last_message_textview_top_margin"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:textColor="@color/list_item_description_text_color"
        android:textSize="@dimen/list_item_description_text_size"
        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/conversation_name_textview"
        android:layout_marginRight="@dimen/conversation_list_item_conversation_last_message_date_textview_right_margin"
        >

        <TextView
            android:id="@+id/conversation_last_message_date_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textColor="@color/list_item_description_text_color"
            android:textSize="@dimen/new_chat_conversation_list_last_message_textview_textsize"
            />

        <TextView
            android:id="@+id/conversation_unread_messages_count_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/conversation_last_message_date_textview"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/conversation_list_item_conversation_unread_messages_count_textview_top_margin"
            android:background="@drawable/badge_blue_small"
            android:gravity="center_horizontal"
            android:textColor="@android:color/white"
            android:textSize="@dimen/new_chat_conversation_list_last_message_textview_textsize"
            />
    </RelativeLayout>

</RelativeLayout>