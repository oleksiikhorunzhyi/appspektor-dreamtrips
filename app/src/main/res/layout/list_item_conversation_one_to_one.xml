<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/new_chat_list_item_vertical_padding"
    android:paddingLeft="@dimen/new_chat_list_item_horizontal_padding"
    android:paddingRight="@dimen/new_chat_list_item_horizontal_padding"
    android:paddingTop="@dimen/new_chat_list_item_vertical_padding"
    >

    <com.messenger.ui.widget.AvatarView
        android:id="@+id/conversation_avatar_view"
        android:layout_width="@dimen/list_item_avatar_image_view_size"
        android:layout_height="@dimen/list_item_avatar_image_view_size"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        app:riv_oval="true"
        />

    <TextView
        android:id="@+id/conversation_name_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/conversation_avatar_view"
        style="@style/ConversationListNameTextView"
        />

    <TextView
        android:id="@+id/conversation_last_message_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/conversation_name_textview"
        android:layout_below="@+id/conversation_name_textview"
        android:layout_toLeftOf="@+id/conversation_last_messages_layout"
        style="@style/ConversationListLastMessageTextView"
        />

    <RelativeLayout
        android:id="@+id/conversation_last_messages_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/conversation_name_textview"
        android:layout_marginRight="@dimen/conversation_list_item_conversation_last_message_date_textview_right_margin"
        >

        <TextView
            android:id="@+id/conversation_last_message_date_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            style="@style/ConversationListLastMessageDateTextView"
            />

        <TextView
            android:id="@+id/conversation_unread_messages_count_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/conversation_last_message_date_textview"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            style="@style/ConversationListUnreadMessagesCountTextView"
            />
    </RelativeLayout>

</RelativeLayout>