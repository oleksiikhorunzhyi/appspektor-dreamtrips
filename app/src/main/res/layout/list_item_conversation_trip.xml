<com.daimajia.swipe.SwipeLayout
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipe"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <include layout="@layout/list_item_conversation_swappable_action_buttons"/>

    <LinearLayout android:id="@+id/conversation_item_view"
                  xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:paddingBottom="@dimen/conversation_list_item_vertical_padding"
                  android:paddingLeft="@dimen/conversation_list_item_horizontal_padding"
                  android:paddingRight="@dimen/conversation_list_item_horizontal_padding"
                  android:paddingTop="@dimen/conversation_list_item_vertical_padding"
        >

        <ImageView
            android:id="@+id/conversation_group_pic"
            style="@style/GroupChatBigAvatarView"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_trip_chat"
            tools:ignore="ContentDescription"/>

        <include
            layout="@layout/list_item_conversation_common"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            />

    </LinearLayout>

</com.daimajia.swipe.SwipeLayout>