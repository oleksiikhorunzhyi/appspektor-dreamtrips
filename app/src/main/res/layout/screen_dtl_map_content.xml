<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      >

   <include layout="@layout/map_fragment_with_info" />

   <Button
         android:id="@+id/redoMerchants"
         style="@style/DtlButtonTheme"
         android:minWidth="230dp"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="@string/dtl_load_merchants_here_button_caption"
         android:layout_margin="@dimen/spacing_normal"
         android:textAllCaps="true"
         android:layout_gravity="center_horizontal|bottom"
         android:textColor="@color/white"
         android:visibility="gone"
         />

   <Button
         android:id="@+id/loadMoreMerchants"
         style="@style/DtlButtonTheme"
         android:minWidth="230dp"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="@string/dtl_load_more"
         android:layout_margin="@dimen/spacing_normal"
         android:textAllCaps="true"
         android:layout_gravity="center_horizontal|bottom"
         android:textColor="@color/white"
         android:visibility="gone"
         />
</FrameLayout>
