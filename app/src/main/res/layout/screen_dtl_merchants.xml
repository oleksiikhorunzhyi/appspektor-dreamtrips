<?xml version="1.0" encoding="utf-8"?>
<com.worldventures.dreamtrips.modules.dtl_flow.parts.merchants.DtlMerchantsScreenImpl
    android:id="@+id/dtl_merchants_screen_root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        >

        <include layout="@layout/view_dtl_toolbar" />

        <RelativeLayout
            android:id="@+id/subToolbarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:minHeight="?attr/actionBarSize"
            >

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/filtersCounter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/darker_gray"
                android:textSize="20sp"
                android:layout_margin="5dp"
                android:layout_centerVertical="true"
                android:text="Filters %d"
                />

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/filterDiningsSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="8dp"
                android:checked="false"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="5dp"
                android:layout_toLeftOf="@id/filterDiningsSwitch"
                android:text="@string/dtl_show_offers_only"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="14sp"
                />
        </RelativeLayout>
    </android.support.design.widget.AppBarLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/dtl_cities_background"
        >

        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/swipe_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"
            >

            <com.worldventures.dreamtrips.modules.common.view.custom.EmptyRecyclerView
                android:id="@+id/lv_items"
                style="@style/myRecyclerViewStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fadingEdgeLength="0dp"
                android:overScrollMode="never"
                android:paddingBottom="6dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="6dp"
                android:visibility="visible"
                tools:listitem="@layout/adapter_item_dtl_merchant_expandable"
                />
        </android.support.v4.widget.SwipeRefreshLayout>

        <FrameLayout
            android:id="@+id/emptyView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            tools:visibility="visible"
            >

            <TextView
                android:id="@+id/merchant_holder_offers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/dtlPlaceListEmptyViewMargin"
                android:gravity="center"
                android:textSize="@dimen/dtlPlaceListEmptyViewTextSize"
                tools:text="@string/dtl_place_list_empty_text"
                />
        </FrameLayout>
    </FrameLayout>
</com.worldventures.dreamtrips.modules.dtl_flow.parts.merchants.DtlMerchantsScreenImpl>
