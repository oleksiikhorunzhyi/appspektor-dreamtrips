<?xml version="1.0" encoding="utf-8"?>
<com.worldventures.dreamtrips.modules.dtl_flow.parts.review.DtlReviewScreenImpl xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:app="http://schemas.android.com/apk/res-auto"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      >

   <android.support.design.widget.AppBarLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:theme="@style/ToolBarStyle"
         >

      <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_actionbar"
            style="@style/MyToolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/toolbarColor"
            android:theme="@style/ToolbarStyle"
            >

         <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:background="@color/toolbarColor"
               >

            <TextView
                  android:id="@+id/tvOnPost"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignParentEnd="true"
                  android:layout_centerVertical="true"
                  android:background="@color/toolbarColor"
                  android:text="@string/menu_post"
                  android:textColor="@android:color/white"
                  android:textSize="15sp"
                  />

            <TextView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginRight="48dp"
                  android:background="@color/toolbarColor"
                  android:gravity="center"
                  android:text="@string/titleReview"
                  android:textColor="@android:color/white"
                  android:textSize="20sp"
                  app:layout_anchorGravity="top|center_horizontal"
                  />

         </RelativeLayout>

         <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:gravity="center"
               android:text="@string/titleReview"
               android:textColor="@android:color/white"
               android:textSize="20sp"
               />
      </android.support.v7.widget.Toolbar>

   </android.support.design.widget.AppBarLayout>

   <include layout="@layout/layout_review_post" />

</com.worldventures.dreamtrips.modules.dtl_flow.parts.review.DtlReviewScreenImpl>
