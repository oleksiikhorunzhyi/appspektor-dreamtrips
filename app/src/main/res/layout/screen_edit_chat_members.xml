<?xml version="1.0" encoding="utf-8"?>
<com.messenger.ui.view.edit_member.EditChatMembersScreenImpl android:id="@+id/edit_chat_members_screen"
      xmlns:android="http://schemas.android.com/apk/res/android"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      >

   <android.support.v7.widget.Toolbar
         android:id="@+id/edit_chat_members_toolbar"
         style="@style/ToolBarStyle"
         />

   <FrameLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:focusable="true"
         android:focusableInTouchMode="true"
         >

      <FrameLayout
            android:id="@+id/edit_chat_members_content_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

         <android.support.v7.widget.RecyclerView
               android:id="@+id/edit_chat_members_recycler_view"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               />
      </FrameLayout>

      <TextView
            android:id="@+id/edit_chat_members_error_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/new_chat_error_loading_contacts"
            />

      <ProgressBar
            android:id="@+id/edit_chat_members_loading_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/new_chat_progress_bar_margin_top"
            />
   </FrameLayout>
</com.messenger.ui.view.edit_member.EditChatMembersScreenImpl>
