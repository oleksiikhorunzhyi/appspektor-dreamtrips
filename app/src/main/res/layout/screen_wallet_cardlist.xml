<com.worldventures.dreamtrips.wallet.ui.dashboard.list.CardListScreen xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:app="http://schemas.android.com/apk/res-auto"
      xmlns:tools="http://schemas.android.com/tools"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:theme="@style/WalletTheme"
      >

   <android.support.design.widget.CoordinatorLayout
         android:id="@+id/main_content"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         >

      <android.support.v7.widget.RecyclerView
            android:id="@+id/bank_card_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:clipToPadding="false"
            android:paddingBottom="@dimen/spacing_large"
            tools:listitem="@layout/adapter_item_wallet_bankcard"
            />

      <android.support.design.widget.FloatingActionButton
            android:id="@+id/add_card_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:src="@drawable/ic_white_plus"
            app:backgroundTint="@color/add_card_button_selector"
            app:fab_size="normal"
            app:layout_anchor="@id/bank_card_list"
            app:layout_anchorGravity="bottom|center_horizontal"
            app:layout_behavior="com.worldventures.dreamtrips.wallet.ui.dashboard.list.util.ScrollFABBehavior"
            app:rippleColor="@color/add_card_button_selector"
            />

   </android.support.design.widget.CoordinatorLayout>

   <TextView
         android:id="@+id/empty_card_view"
         android:layout_width="match_parent"
         android:layout_height="150dp"
         android:layout_gravity="bottom"
         android:layout_marginBottom="80dp"
         android:layout_marginLeft="30dp"
         android:layout_marginRight="30dp"
         android:background="@drawable/background_empty_card_list_message"
         android:gravity="center"
         android:paddingBottom="15dp"
         android:text="@string/wallet_wizard_empty_card_list_label"
         android:textColor="@color/wallet_card_list_empty_list_label_color"
         android:textSize="18sp"
         android:visibility="visible"
         />

</com.worldventures.dreamtrips.wallet.ui.dashboard.list.CardListScreen>
