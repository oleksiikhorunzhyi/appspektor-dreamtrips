<?xml version="1.0" encoding="utf-8"?>
<com.worldventures.dreamtrips.wallet.ui.settings.factory_reset.FactoryResetScreen xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:app="http://schemas.android.com/apk/res-auto"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      android:theme="@style/WalletTheme"
      >

   <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         >

      <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_alignParentStart="true"
            app:title="@string/wallet_factory_reset_title"
            />

      <TextView
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/spacing_small"
            android:text="@string/wallet_cancel_label"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_medium"
            />
   </RelativeLayout>

   <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         >

      <TextView
            android:id="@+id/header_text_view"
            style="@style/WalletTheme.HeaderTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_margin="@dimen/spacing_normal"
            android:text="@string/wallet_factory_reset_enter_pin_text"
            />

      <ImageView
            android:id="@+id/flye_card_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/header_text_view"
            android:scaleType="fitEnd"
            android:src="@drawable/hands_pin"
            />

   </RelativeLayout>
</com.worldventures.dreamtrips.wallet.ui.settings.factory_reset.FactoryResetScreen>
