<?xml version="1.0" encoding="utf-8"?>
<com.worldventures.dreamtrips.wallet.ui.settings.help.documents.doc.HelpDocumentScreen xmlns:android="http://schemas.android.com/apk/res/android"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@color/grey_lighter"
      android:orientation="vertical"
      android:theme="@style/WalletTheme"
      >

   <android.support.v7.widget.Toolbar
         android:id="@+id/toolbar"
         android:layout_width="match_parent"
         android:layout_height="?attr/actionBarSize"
         />

   <FrameLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         >

      <me.zhanghai.android.materialprogressbar.MaterialProgressBar
            android:id="@+id/pb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            />

      <WebView
            android:id="@+id/document_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

   </FrameLayout>

</com.worldventures.dreamtrips.wallet.ui.settings.help.documents.doc.HelpDocumentScreen>