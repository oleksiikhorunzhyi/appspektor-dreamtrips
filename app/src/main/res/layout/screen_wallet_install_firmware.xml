<?xml version="1.0" encoding="utf-8"?>
<com.worldventures.dreamtrips.wallet.ui.settings.firmware.install.WalletInstallFirmwareScreen xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:app="http://schemas.android.com/apk/res-auto"
      xmlns:tools="http://schemas.android.com/tools"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      android:theme="@style/WalletTheme"
      >

   <android.support.v7.widget.Toolbar
         android:id="@+id/toolbar"
         android:layout_width="match_parent"
         android:layout_height="?attr/actionBarSize"
         app:title="@string/wallet_firmware_download_header"
         />

   <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_gravity="center_horizontal"
         android:layout_marginTop="60dp"
         android:text="@string/wallet_firmware_install_text"
         android:textAppearance="?android:attr/textAppearanceLarge"
         />

   <TextView
         android:id="@+id/install_step"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_gravity="center_horizontal"
         android:text="@string/wallet_firmware_install_sub_text"
         android:textAppearance="?android:attr/textAppearanceMedium"
         />

   <FrameLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_gravity="center_horizontal"
         android:layout_marginTop="44dp"
         >

      <com.worldventures.dreamtrips.wallet.ui.widget.WalletProgressWidget
            android:id="@+id/firmware_install_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/wallet_download_progress"
            />

      <TextView
            android:id="@+id/progressStatusLabel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="40sp"
            tools:text="33%"
            />

   </FrameLayout>

   <TextView
         android:id="@+id/textView4"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_gravity="center"
         android:layout_marginTop="60dp"
         android:text="@string/wallet_long_operation_hint"
         />

</com.worldventures.dreamtrips.wallet.ui.settings.firmware.install.WalletInstallFirmwareScreen>