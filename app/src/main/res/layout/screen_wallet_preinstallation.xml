<?xml version="1.0" encoding="utf-8"?>
<com.worldventures.dreamtrips.wallet.ui.settings.firmware.preinstalletion.WalletFirmwareChecksScreen xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:app="http://schemas.android.com/apk/res-auto"
      xmlns:tools="http://schemas.android.com/tools"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:theme="@style/WalletTheme"
      >

   <android.support.v7.widget.Toolbar
         android:id="@+id/toolbar"
         android:layout_width="match_parent"
         android:layout_height="?attr/actionBarSize"
         app:title="@string/wallet_firmware_pre_installation_title"
         />

   <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:paddingEnd="@dimen/spacing_large"
         android:paddingStart="@dimen/spacing_large"
         android:paddingTop="@dimen/spacing_large"
         >

      <TextView
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="@dimen/spacing_medium"
            android:layout_marginTop="@dimen/spacing_normal"
            android:gravity="center"
            android:text="@string/wallet_firmware_pre_installation_header"
            />

      <com.worldventures.dreamtrips.wallet.ui.widget.WalletCheckWidget
            android:id="@+id/check_widget_bluetooth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/header"
            app:icon="@drawable/ic_wallet_bluetooth"
            app:title="@string/wallet_firmware_pre_installation_bluetooth"
            />

      <com.worldventures.dreamtrips.wallet.ui.widget.WalletCheckWidget
            android:id="@+id/check_widget_connection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/check_widget_bluetooth"
            android:visibility="gone"
            app:checked="true"
            app:icon="@drawable/ic_wallet_power"
            app:title="@string/wallet_firmware_pre_installation_connection"
            tools:visibility="visible"
            />

      <com.worldventures.dreamtrips.wallet.ui.widget.WalletCheckWidget
            android:id="@+id/check_widget_charge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/check_widget_connection"
            android:visibility="gone"
            app:icon="@drawable/ic_wallet_charged"
            app:title="@string/wallet_firmware_pre_installation_charging"
            tools:visibility="visible"
            />

      <Button
            android:id="@+id/install"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/install_later"
            android:enabled="false"
            android:padding="@dimen/spacing_normal"
            android:text="@string/wallet_firmware_pre_installation_button"
            tools:enabled="true"
            />

      <TextView
            android:id="@+id/install_later"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:paddingBottom="@dimen/spacing_normal"
            android:paddingTop="@dimen/spacing_normal"
            android:text="@string/wallet_firmware_pre_installation_install_later"
            android:textColor="?attr/colorPrimary"
            />
   </RelativeLayout>
</com.worldventures.dreamtrips.wallet.ui.settings.firmware.preinstalletion.WalletFirmwareChecksScreen>