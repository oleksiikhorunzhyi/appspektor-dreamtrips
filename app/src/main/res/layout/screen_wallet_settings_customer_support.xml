<?xml version="1.0" encoding="utf-8"?>
<com.worldventures.dreamtrips.wallet.ui.settings.help.support.WalletCustomerSupportSettingsScreen xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:app="http://schemas.android.com/apk/res-auto"
      xmlns:tools="http://schemas.android.com/tools"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@android:color/white"
      android:theme="@style/WalletTheme"
      >

   <android.support.v7.widget.Toolbar
         android:id="@+id/toolbar"
         android:layout_width="match_parent"
         android:layout_height="?attr/actionBarSize"
         app:title="@string/wallet_card_settings_customer_support"
         />

   <LinearLayout
         android:id="@+id/container_cutomer_care_contacts"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:divider="@drawable/divider_horizontal_wallet_settings"
         android:orientation="vertical"
         android:showDividers="middle|end"
         >

      <LinearLayout
            android:id="@+id/item_us_customer_care"
            style="@style/SettingsMenuItem"
            android:orientation="vertical"
            >

         <TextView
               android:id="@+id/tv_us_customer_care"
               style="@style/SettingsText.Primary"
               tools:text="(855) 999-3593"
               />

         <TextView
               style="@style/SettingsText.Secondary"
               android:text="@string/wallet_settings_help_customer_support_us_customer_care"
               />

      </LinearLayout>

      <LinearLayout
            android:id="@+id/item_international_collect"
            style="@style/SettingsMenuItem"
            android:orientation="vertical"
            >

         <TextView
               android:id="@+id/tv_international_collect"
               style="@style/SettingsText.Primary"
               tools:text="(469) 609-4830"
               />

         <TextView
               style="@style/SettingsText.Secondary"
               android:text="@string/wallet_settings_help_customer_support_international_collect"
               />

      </LinearLayout>

      <TextView
            android:id="@+id/item_email_us"
            style="@style/SettingsMenuItem.Text"
            android:text="@string/wallet_settings_help_customer_support_email_us"
            />

   </LinearLayout>

</com.worldventures.dreamtrips.wallet.ui.settings.help.support.WalletCustomerSupportSettingsScreen>