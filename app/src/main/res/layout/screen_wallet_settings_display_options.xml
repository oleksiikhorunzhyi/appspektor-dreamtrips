<?xml version="1.0" encoding="utf-8"?>
<com.worldventures.dreamtrips.wallet.ui.settings.general.display.DisplayOptionsSettingsScreen xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:app="http://schemas.android.com/apk/res-auto"
      xmlns:tools="http://schemas.android.com/tools"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:theme="@style/WalletTheme"
      >

   <android.support.v7.widget.Toolbar
         android:id="@+id/toolbar"
         android:layout_width="match_parent"
         android:layout_height="?attr/actionBarSize"
         app:title="@string/wallet_card_settings_display_options"
         />

   <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="0dp"
         android:layout_weight="1"
         android:gravity="center_horizontal"
         android:orientation="vertical"
         >

      <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:text="@string/wallet_settings_general_display_customize_sleep_screen"
            android:textSize="@dimen/font_large"
            />

      <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_normal"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="3sp"
            android:text="@string/wallet_settings_general_display_how_screen_appear_on_sc"
            android:textColor="#6d6d72"
            android:textSize="@dimen/font_medium"
            />

   </LinearLayout>

   <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="220dp"
         >

      <android.support.v4.view.ViewPager
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            tools:background="@color/grey"
            />

      <ImageView
            android:id="@+id/iv_pager_frame"
            android:layout_width="147dp"
            android:layout_height="147dp"
            android:layout_centerInParent="true"
            android:src="@drawable/shape_settings_display_options_frame"
            />

      <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/iv_pager_frame"
            android:layout_alignTop="@+id/iv_pager_frame"
            android:layout_gravity="center"
            android:layout_margin="@dimen/spacing_tiny"
            android:src="@drawable/ic_vector_check_circle_green"
            />

   </RelativeLayout>

   <FrameLayout
         android:layout_width="match_parent"
         android:layout_height="0dp"
         android:layout_weight="1"
         >

      <me.relex.circleindicator.CircleIndicator
            android:id="@+id/indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="36dp"
            app:ci_animator="@animator/wallet_settings_display_options_indicator_alpha"
            app:ci_drawable="@drawable/shape_settings_display_options_indicator"
            app:ci_drawable_unselected="@drawable/shape_settings_display_options_indicator"
            app:ci_height="6dp"
            app:ci_width="6dp"
            />

   </FrameLayout>

</com.worldventures.dreamtrips.wallet.ui.settings.general.display.DisplayOptionsSettingsScreen>
