<?xml version="1.0" encoding="utf-8"?>
<com.worldventures.dreamtrips.wallet.ui.settings.firmware.installsuccess.WalletSuccessInstallFirmwareScreen xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:app="http://schemas.android.com/apk/res-auto"
      xmlns:tools="http://schemas.android.com/tools"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:theme="@style/WalletTheme"
      >

   <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:gravity="center_horizontal"
         android:orientation="vertical"
         >

      <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:navigationIcon="@null"
            app:title="@string/wallet_settings_last_version_title"
            />

      <ImageView
            android:id="@+id/success_firmware_install_image"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/spacing_large"
            android:layout_weight="1"
            android:src="@drawable/flyecard_angle"
            tools:ignore="ContentDescription"
            />

      <ImageView
            android:id="@+id/success_firmware_install_sub_image"
            android:layout_width="91dp"
            android:layout_height="91dp"
            android:layout_above="@+id/success_label_text_view"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="-40dp"
            android:background="@drawable/ic_pin_is_set_circle"
            android:padding="20dp"
            android:src="@drawable/ic_pin_is_set_check"
            tools:ignore="ContentDescription"
            />


      <TextView
            android:id="@+id/success_firmware_install_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_normal"
            android:text="@string/wallet_firmware_install_success_title"
            android:textStyle="bold"
            />

      <TextView
            android:id="@+id/success_firmware_install_sub_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="@dimen/spacing_normal"
            android:gravity="center"
            tools:text="@string/wallet_firmware_install_success_sub_title"
            />

      <Button
            android:id="@+id/success_firmware_install_done"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:layout_margin="@dimen/spacing_normal"
            android:text="@string/wallet_firmware_install_success_action_button"
            />

   </LinearLayout>

</com.worldventures.dreamtrips.wallet.ui.settings.firmware.installsuccess.WalletSuccessInstallFirmwareScreen>