<?xml version="1.0" encoding="utf-8"?>

<com.worldventures.dreamtrips.wallet.ui.wizard.card_details.AddCardDetailsScreen xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:app="http://schemas.android.com/apk/res-auto"
      xmlns:tools="http://schemas.android.com/tools"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:theme="@style/WalletTheme.DetailsTheme"
      >

   <android.support.v7.widget.Toolbar
         android:id="@+id/toolbar"
         android:layout_width="match_parent"
         android:layout_height="?attr/actionBarSize"
         android:theme="@style/WalletTheme.ToolbarStyle"
         app:navigationIcon="@drawable/blue_arrow"
         app:title="@string/wallet_add_card_details_title"
         />

   <ScrollView
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:layout_marginTop="?attr/actionBarSize"
         >

      <LinearLayout
            style="@style/WalletTheme.Wizard.ContentContainerStyle"
            android:orientation="vertical"
            >

         <com.worldventures.dreamtrips.wallet.ui.widget.BankCardWidget
               android:id="@+id/card"
               layout="@layout/adapter_item_wallet_bankcard"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="center_horizontal"
               />

         <TextView
               android:id="@+id/cvv_label"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="center_horizontal"
               android:layout_marginTop="@dimen/wallet_add_card_details_component_margin_top"
               android:text="@string/wallet_add_card_details_cvv_label"
               />

         <com.alimuzaffar.lib.pin.PinEntryEditText
               android:id="@+id/card_cvv"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="center_horizontal"
               android:hint="@string/wallet_add_card_details_hint_enter_cvv"
               android:inputType="number"
               android:maxLength="3"
               android:singleLine="true"
               app:pinCharacterSpacing="8dp"
               app:pinLineColors="?android:attr/textColorPrimary"
               app:pinRepeatedHint="#"
               />

         <include
               android:id="@+id/address_info"
               layout="@layout/include_wallet_address_info"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="@dimen/wallet_add_card_details_component_margin_top"
               />

         <android.support.v7.widget.SwitchCompat
               android:id="@+id/set_default_card_switcher"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="@dimen/wallet_add_card_details_component_margin_top"
               android:text="@string/wallet_add_card_details_option_set_as_default_card"
               tools:checked="true"
               />

         <EditText
               android:id="@+id/card_nickname"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="@dimen/wallet_add_card_details_component_margin_top"
               android:hint="@string/wallet_add_card_details_hint_nickname_card"
               android:imeOptions="actionDone"
               android:singleLine="true"
               />

         <Button
               android:id="@+id/confirm_button"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="@dimen/wallet_add_card_details_component_margin_top"
               android:text="@string/wallet_add_card_details_button_confirm"
               />

      </LinearLayout>

   </ScrollView>

</com.worldventures.dreamtrips.wallet.ui.wizard.card_details.AddCardDetailsScreen>
