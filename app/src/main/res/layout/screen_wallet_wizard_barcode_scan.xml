<?xml version="1.0" encoding="utf-8"?>
<com.worldventures.dreamtrips.wallet.ui.view.wizard.WizardScanBarcodeScreenImpl xmlns:android="http://schemas.android.com/apk/res/android"
                                                                                android:layout_width="match_parent"
                                                                                android:layout_height="match_parent">

    <me.dm7.barcodescanner.zxing.ZXingScannerView
        android:id="@+id/scanner_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginTop="10dp"
        android:text="@string/wallet_wizard_scan_barcode_header"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_gravity="bottom|center_horizontal"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/wallet_wizard_scan_barcode_footer_title"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:text="@string/wallet_wizard_scan_barcode_footer_btn"/>
    </LinearLayout>
</com.worldventures.dreamtrips.wallet.ui.view.wizard.WizardScanBarcodeScreenImpl>
