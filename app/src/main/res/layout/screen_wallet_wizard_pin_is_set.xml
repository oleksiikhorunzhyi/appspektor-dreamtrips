<?xml version="1.0" encoding="utf-8"?>
<com.worldventures.dreamtrips.wallet.ui.wizard.finish.WalletPinIsSetScreen xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:app="http://schemas.android.com/apk/res-auto"
      xmlns:tools="http://schemas.android.com/tools"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:theme="@style/WalletTheme"
      >

   <android.support.v7.widget.Toolbar
         android:id="@+id/toolbar"
         android:layout_width="match_parent"
         android:layout_height="?attr/actionBarSize"
         app:title="@string/wallet_wizard_setup_pin_title"
         />

   <RelativeLayout
         style="@style/WalletTheme.ContentContainerStyle"
         android:layout_marginTop="150dp"
         >

      <ImageView
            android:id="@+id/iv_success_icon"
            android:layout_width="@dimen/wallet_round_icon_success_size"
            android:layout_height="@dimen/wallet_round_icon_success_size"
            android:layout_centerHorizontal="true"
            android:background="@drawable/ic_pin_is_set_circle"
            android:padding="@dimen/wallet_round_icon_success_padding"
            android:src="@drawable/ic_pin_is_set_check"
            tools:ignore="ContentDescription"
            />

      <TextView
            android:id="@+id/label_pin_is_set"
            style="@style/WalletTheme.HeaderTextStyle"
            android:layout_below="@+id/iv_success_icon"
            android:layout_marginTop="32dp"
            android:text="@string/wallet_wizard_pin_is_set"
            android:textAppearance="?android:attr/textAppearanceLarge"
            />

      <TextView
            style="@style/WalletTheme.HeaderTextStyle"
            android:layout_below="@+id/label_pin_is_set"
            android:layout_marginTop="48dp"
            android:text="@string/wallet_wizard_pin_is_set_suggestion"
            android:textAppearance="?android:attr/textAppearanceLarge"
            />

      <Button
            android:id="@+id/next_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="@string/wallet_next_label"
            />
   </RelativeLayout>
</com.worldventures.dreamtrips.wallet.ui.wizard.finish.WalletPinIsSetScreen>