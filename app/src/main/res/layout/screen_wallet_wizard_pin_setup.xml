<?xml version="1.0" encoding="utf-8"?>

<com.worldventures.dreamtrips.wallet.ui.wizard.pin.WizardPinSetupScreen xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:app="http://schemas.android.com/apk/res-auto"
      xmlns:tools="http://schemas.android.com/tools"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:theme="@style/WalletTheme"
      >

   <android.support.v7.widget.Toolbar
         android:id="@+id/toolbar"
         android:layout_width="match_parent"
         android:layout_height="?attr/actionBarSize"
         app:title="@string/wallet_wizard_setup_pin_title"
         />

   <RelativeLayout
         style="@style/WalletTheme.ContentContainerStyle"
         android:layout_marginTop="80dp"
         >

      <TextView
            android:id="@+id/header_text_view"
            style="@style/WalletTheme.HeaderTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="@string/wallet_wizard_setup_pin_header"
            />


      <ImageView
            android:id="@+id/flye_card_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/header_text_view"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="40dp"
            android:scaleType="centerInside"
            android:src="@drawable/flyecard_front_set_pin"
            />

      <Button
            android:id="@+id/button_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            tools:text="@string/wallet_got_it_label"
            />
   </RelativeLayout>
</com.worldventures.dreamtrips.wallet.ui.wizard.pin.WizardPinSetupScreen>