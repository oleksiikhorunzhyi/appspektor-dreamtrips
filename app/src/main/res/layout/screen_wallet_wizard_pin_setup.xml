<?xml version="1.0" encoding="utf-8"?>

<com.worldventures.dreamtrips.wallet.ui.wizard.pin.enter.EnterPinScreen xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:app="http://schemas.android.com/apk/res-auto"
      xmlns:tools="http://schemas.android.com/tools"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      android:theme="@style/WalletTheme"
      >

   <android.support.v7.widget.Toolbar
         android:id="@+id/toolbar"
         android:layout_width="match_parent"
         android:layout_height="?attr/actionBarSize"
         app:title="@string/wallet_wizard_setup_pin_title"
         />

   <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:background="@color/white"
         >

      <TextView
            android:id="@+id/header_text_view"
            style="@style/WalletTheme.HeaderTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/wizard_video_view"
            android:layout_alignParentTop="true"
            android:paddingLeft="@dimen/spacing_normal"
            android:paddingRight="@dimen/spacing_normal"
            android:textAppearance="?android:attr/textAppearanceMedium"
            tools:text="@string/wallet_wizard_setup_pin_header"
            />

      <com.worldventures.dreamtrips.wallet.ui.widget.WizardVideoView
            android:id="@+id/wizard_video_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            />

   </RelativeLayout>
</com.worldventures.dreamtrips.wallet.ui.wizard.pin.enter.EnterPinScreen>
