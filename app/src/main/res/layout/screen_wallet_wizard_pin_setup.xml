<?xml version="1.0" encoding="utf-8"?>
<com.worldventures.dreamtrips.wallet.ui.wizard.pin.setup.WizardPinSetupScreen xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:app="http://schemas.android.com/apk/res-auto"
      xmlns:tools="http://schemas.android.com/tools"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      android:theme="@style/WalletTheme"
      >

   <android.support.v7.widget.Toolbar
         android:id="@+id/toolbar"
         android:layout_width="match_parent"
         android:layout_height="?attr/actionBarSize"
         app:title="@string/wallet_wizard_setup_pin_title"
         />

   <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:background="@color/white"
         >

      <TextView
            android:id="@+id/header_text_view"
            style="@style/WalletTheme.HeaderTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:paddingLeft="@dimen/spacing_normal"
            android:paddingRight="@dimen/spacing_normal"
            android:paddingTop="@dimen/spacing_large"
            android:textSize="@dimen/font_large"
            tools:text="@string/wallet_wizard_setup_pin_header"
            />

      <com.worldventures.dreamtrips.wallet.ui.widget.WizardVideoView
            android:id="@+id/wizard_video_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/header_text_view"
            android:layout_alignParentBottom="true"
            />

      <Button
            android:id="@+id/button_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="@dimen/spacing_large"
            tools:text="@string/wallet_got_it_label"
            />
   </RelativeLayout>
</com.worldventures.dreamtrips.wallet.ui.wizard.pin.setup.WizardPinSetupScreen>
