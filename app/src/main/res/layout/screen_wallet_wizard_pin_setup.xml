<?xml version="1.0" encoding="utf-8"?>
<com.worldventures.dreamtrips.wallet.ui.wizard.pin.setup.WizardPinSetupScreen xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:app="http://schemas.android.com/apk/res-auto"
      xmlns:tools="http://schemas.android.com/tools"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:theme="@style/WalletTheme"
      >

   <android.support.v7.widget.Toolbar
         android:id="@+id/toolbar"
         android:layout_width="match_parent"
         android:layout_height="?attr/actionBarSize"
         app:title="@string/wallet_wizard_setup_pin_title"
         />

   <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         >

      <TextView
            android:id="@+id/header_text_view"
            style="@style/WalletTheme.HeaderTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:paddingLeft="@dimen/spacing_normal"
            android:paddingRight="@dimen/spacing_normal"
            android:paddingTop="@dimen/spacing_normal"
            android:textSize="@dimen/font_large"
            tools:text="@string/wallet_wizard_setup_pin_header"
            />

      <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/header_text_view"
            android:layout_marginTop="@dimen/spacing_large"
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@+id/linearLayout2"
            >

         <ImageView
               android:layout_width="38dp"
               android:layout_height="38dp"
               app:srcCompat="@drawable/wizard_lock_info_long_click_left_btn_example"
               />

         <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginLeft="@dimen/spacing_small"
               android:text="@string/wallet_set_pin_info_gesture"
               android:textAppearance="@style/WalletTheme.TextAppearanceMedium"
               />
      </LinearLayout>

      <ImageView
            android:id="@+id/flye_card_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/linearLayout2"
            android:layout_marginBottom="-58dp"
            android:layout_marginTop="@dimen/spacing_small"
            android:scaleType="fitEnd"
            android:src="@drawable/hands_pin"
            tools:ignore="ContentDescription"
            />

      <Button
            android:id="@+id/button_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="@dimen/spacing_large"
            tools:text="@string/wallet_got_it_label"
            />
   </RelativeLayout>
</com.worldventures.dreamtrips.wallet.ui.wizard.pin.setup.WizardPinSetupScreen>
