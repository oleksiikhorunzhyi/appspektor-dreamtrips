<?xml version="1.0" encoding="utf-8"?>
<com.worldventures.dreamtrips.wallet.ui.wizard.power_on.WizardPowerOnScreen xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:app="http://schemas.android.com/apk/res-auto"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:gravity="center"
      android:theme="@style/WalletTheme"
      >

   <android.support.v7.widget.Toolbar
         android:id="@+id/toolbar"
         android:layout_width="match_parent"
         android:layout_height="?attr/actionBarSize"
         app:title="@string/wallet_wizard_power_on_title"
         />

   <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:background="@android:color/white"
         >

      <TextView
            android:id="@+id/wallet_wizard_power_on_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/spacing_large"
            android:layout_marginStart="@dimen/spacing_large"
            android:layout_marginTop="@dimen/spacing_huge"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:text="@string/wallet_wizard_power_on_header"
            android:textAppearance="?android:attr/textAppearanceLarge"
            />

      <com.worldventures.dreamtrips.wallet.ui.widget.WizardVideoView
            android:id="@+id/wizard_video_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/wallet_wizard_power_on_title"
            android:layout_alignParentBottom="true"
            />

      <Button
            android:id="@+id/wallet_wizard_power_on_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="@dimen/spacing_large"
            android:text="@string/wallet_next_label"
            />

   </RelativeLayout>

</com.worldventures.dreamtrips.wallet.ui.wizard.power_on.WizardPowerOnScreen>
