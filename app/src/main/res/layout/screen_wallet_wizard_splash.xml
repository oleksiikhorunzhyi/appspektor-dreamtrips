<?xml version="1.0" encoding="utf-8"?>
<com.worldventures.dreamtrips.wallet.ui.wizard.splash.WizardSplashScreen style="@style/WalletTheme.Wizard.RootStyle"
      xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:app="http://schemas.android.com/apk/res-auto"
      xmlns:tools="http://schemas.android.com/tools"
      android:gravity="center"
      android:theme="@style/WalletTheme.Wizard"
      >

   <android.support.v7.widget.Toolbar
         android:id="@+id/toolbar"
         android:layout_width="match_parent"
         android:layout_height="?attr/actionBarSize"
         android:theme="@style/WalletTheme.Wizard.ToolbarTheme"
         app:navigationIcon="@drawable/back_icon"
         app:title="@string/wallet"
         />

   <TextView
         android:id="@+id/wallet_wizard_splash_title"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginLeft="55dp"
         android:layout_marginRight="55dp"
         android:layout_marginTop="81dp"
         android:gravity="center"
         android:text="@string/wallet_wizard_splash_title2"
         android:textAppearance="?android:attr/textAppearanceLarge"
         />

   <TextView
         android:id="@+id/wallet_wizard_splash_soar_title"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginTop="176dp"
         android:gravity="center"
         android:text="@string/wallet_wizard_splash_title1"
         android:textAppearance="?android:attr/textAppearanceLarge"
         />

   <FrameLayout
         android:id="@+id/card_container"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginTop="184dp"
         >

      <ImageView
            android:id="@+id/wallet_wizard_smarcard_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:scaleType="fitCenter"
            android:src="@drawable/flyecard_back"
            tools:ignore="ContentDescription"
            />

      <ImageView
            android:id="@+id/wallet_wizard_smarcard_front"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:scaleType="fitCenter"
            android:src="@drawable/flyecard_front"
            tools:ignore="ContentDescription"
            />
   </FrameLayout>

   <Button
         android:id="@+id/wallet_wizard_splash_btn"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_margin="@dimen/spacing_large"
         android:layout_gravity="bottom"
         android:text="@string/wallet_wizard_scan_start_btn"
         />

</com.worldventures.dreamtrips.wallet.ui.wizard.splash.WizardSplashScreen>
