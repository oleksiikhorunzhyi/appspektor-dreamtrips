<?xml version="1.0" encoding="utf-8"?>
<com.worldventures.dreamtrips.wallet.ui.wizard.splash.WizardSplashScreen xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:app="http://schemas.android.com/apk/res-auto"
      xmlns:tools="http://schemas.android.com/tools"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:gravity="center"
      android:theme="@style/WalletTheme"
      >

   <android.support.v7.widget.Toolbar
         android:id="@+id/toolbar"
         android:layout_width="match_parent"
         android:layout_height="?attr/actionBarSize"
         app:title="@string/wallet_wizard_title"
         />

   <TextView
         android:id="@+id/wallet_wizard_splash_title"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginLeft="40dp"
         android:layout_marginRight="40dp"
         android:layout_marginTop="100dp"
         android:gravity="center"
         android:text="@string/wallet_wizard_splash_title2"
         android:textAppearance="?android:attr/textAppearanceLarge"
         />

   <TextView
         android:id="@+id/wallet_wizard_splash_soar_title"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginTop="176dp"
         android:gravity="center"
         android:text="@string/wallet_wizard_splash_title1"
         android:textAppearance="?android:attr/textAppearanceLarge"
         />

   <ImageView
         android:id="@+id/wallet_wizard_smarcard_front"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginTop="220dp"
         android:scaleType="fitCenter"
         android:src="@drawable/ic_tac_flyecard_angle"
         tools:ignore="ContentDescription"
         />

   <Button
         android:id="@+id/wallet_wizard_splash_btn"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_gravity="bottom"
         android:layout_margin="@dimen/spacing_large"
         android:text="@string/wallet_wizard_scan_start_btn"
         />

</com.worldventures.dreamtrips.wallet.ui.wizard.splash.WizardSplashScreen>
