<?xml version="1.0" encoding="utf-8"?>
<com.worldventures.dreamtrips.wallet.ui.wizard.success.WalletSuccessScreen xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:tools="http://schemas.android.com/tools"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:theme="@style/WalletTheme"
      >

   <android.support.v7.widget.Toolbar
         android:id="@+id/toolbar"
         android:layout_width="match_parent"
         android:layout_height="?attr/actionBarSize"
         />

   <RelativeLayout
         style="@style/WalletTheme.ContentContainerStyle"
         android:layout_marginTop="?attr/actionBarSize"
         >

      <ImageView
            android:id="@+id/iv_success_icon"
            android:layout_width="91dp"
            android:layout_height="91dp"
            android:layout_above="@+id/success_label_text_view"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="16dp"
            android:background="@drawable/ic_pin_is_set_circle"
            android:padding="20dp"
            android:src="@drawable/ic_pin_is_set_check"
            tools:ignore="ContentDescription"
            />

      <TextView
            android:id="@+id/success_label_text_view"
            style="@style/WalletTheme.HeaderTextStyle"
            android:layout_centerVertical="true"
            android:textAppearance="?android:attr/textAppearanceLarge"
            tools:text="@string/wallet_wizard_pin_is_set"
            />

      <Button
            android:id="@+id/next_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            tools:text="@string/wallet_next_label"
            />
   </RelativeLayout>
</com.worldventures.dreamtrips.wallet.ui.wizard.success.WalletSuccessScreen>