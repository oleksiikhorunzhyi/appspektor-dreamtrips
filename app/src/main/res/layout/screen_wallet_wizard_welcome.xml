<?xml version="1.0" encoding="utf-8"?>
<com.worldventures.dreamtrips.wallet.ui.wizard.welcome.WizardWelcomeScreen xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:app="http://schemas.android.com/apk/res-auto"
      xmlns:tools="http://schemas.android.com/tools"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:gravity="center"
      android:orientation="vertical"
      android:theme="@style/WalletTheme"
      android:weightSum="4"
      >

   <android.support.v7.widget.Toolbar
         android:id="@+id/toolbar"
         android:layout_width="match_parent"
         android:layout_height="?attr/actionBarSize"
         app:title="@string/wallet_wizard_welcome_title"
         />

   <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginTop="?attr/actionBarSize"
         android:gravity="center"
         android:orientation="vertical"
         >

      <TextView
            android:id="@+id/greeting_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:visibility="invisible"
            tools:text="Hi Shirley Temple!"
            tools:visibility="visible"
            />

      <TextView
            android:id="@+id/content_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/greeting_label"
            android:gravity="center"
            android:paddingEnd="@dimen/spacing_normal"
            android:paddingStart="@dimen/spacing_large"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:visibility="invisible"
            tools:text="@string/wallet_wizard_welcome_platinum_user"
            tools:visibility="visible"
            />

      <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            >

         <ImageView
               android:id="@+id/smart_card"
               android:layout_width="250dp"
               android:layout_height="wrap_content"
               android:layout_alignParentTop="true"
               android:layout_centerHorizontal="true"
               android:scaleType="fitCenter"
               android:src="@drawable/flye_card_front_without_display"
               tools:ignore="ContentDescription"
               />

         <com.facebook.drawee.view.SimpleDraweeView
               android:id="@+id/user_photo"
               android:layout_width="75dp"
               android:layout_height="75dp"
               android:layout_alignEnd="@+id/smart_card"
               android:layout_centerVertical="true"
               android:layout_marginRight="12dp"
               android:src="@drawable/ic_dt_launcher"
               app:failureImage="@drawable/ic_avatar_placeholder"
               app:placeholderImage="@drawable/ic_avatar_placeholder"
               />

         <ImageView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignLeft="@+id/user_photo"
               android:layout_alignRight="@+id/user_photo"
               android:src="@drawable/ic_flyecard_light"
               android:layout_marginTop="20dp"
               />

      </RelativeLayout>

   </LinearLayout>

   <Button
         android:id="@+id/setup_button"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_gravity="bottom"
         android:layout_margin="@dimen/spacing_large"
         android:text="@string/wallet_wizard_welcome_button_text"
         android:visibility="invisible"
         />

</com.worldventures.dreamtrips.wallet.ui.wizard.welcome.WizardWelcomeScreen>
