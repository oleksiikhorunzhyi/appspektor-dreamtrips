<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

   <data>

      <variable
            name="onMinusCountClick"
            type="android.view.View.OnClickListener"
            />

      <variable
            name="onPlusCountClick"
            type="android.view.View.OnClickListener"
            />
   </data>

   <LinearLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:gravity="center"
         android:orientation="horizontal"
         >

      <TextSwitcher
            android:id="@+id/ts_counter_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            />

      <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/wallet_count_view_height"
            android:layout_marginLeft="@dimen/spacing_medium"
            android:background="@drawable/button_counter_square"
            android:divider="@drawable/divider_vertical_counter_view"
            android:orientation="horizontal"
            android:showDividers="middle"
            >

         <Button
               android:id="@+id/btn_minus"
               android:layout_width="58dp"
               android:layout_height="wrap_content"
               android:layout_margin="0dp"
               android:background="?attr/selectableItemBackground"
               android:onClick="@{onMinusCountClick}"
               android:padding="0dp"
               android:text="&#8212;"
               android:textColor="?attr/colorPrimary"
               android:textSize="@dimen/font_extra_large"
               />

         <Button
               android:id="@+id/btn_plus"
               android:layout_width="58dp"
               android:layout_height="wrap_content"
               android:background="?attr/selectableItemBackground"
               android:onClick="@{onPlusCountClick}"
               android:padding="0dp"
               android:text="+"
               android:textColor="?attr/colorPrimary"
               android:textSize="@dimen/font_extra_large"
               />
      </LinearLayout>

   </LinearLayout>
</layout>