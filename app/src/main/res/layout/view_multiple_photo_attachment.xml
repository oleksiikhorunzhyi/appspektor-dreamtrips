<?xml version="1.0" encoding="utf-8"?>
<!-- GridLayout does not work with SimpleDraweeView -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">

   <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:orientation="horizontal"
         android:background="@color/white"
         android:layout_marginBottom="1dp"
         android:layout_weight="1"
         >

      <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/photo_attachment_preview_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginRight="1dp"
            />

      <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/photo_attachment_preview_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="1dp"
            />

   </LinearLayout>

   <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:orientation="horizontal"
         android:background="@color/white"
         android:layout_marginTop="1dp"
         android:layout_weight="1"
         >

      <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/photo_attachment_preview_3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginRight="1dp"
            />

      <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:layout_weight="1"
            >

         <com.facebook.drawee.view.SimpleDraweeView
               android:id="@+id/photo_attachment_preview_4"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               />

         <TextView
               android:id="@+id/photo_attachment_additional_count_textview"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="center"
               android:textSize="11sp"
               android:textColor="@color/white"
               style="@style/RobotoMediumTextView"
               />

      </FrameLayout>

   </LinearLayout>

</LinearLayout>
