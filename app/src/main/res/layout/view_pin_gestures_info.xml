<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:app="http://schemas.android.com/apk/res-auto"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      >

   <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         >

      <com.worldventures.dreamtrips.wallet.ui.wizard.pin.custom.DirectionInfoView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            app:infoViewImage="@drawable/wizard_lock_info_arrow_right"
            app:infoViewTitle="@string/wallet_lock_label_swipe_right"
            />

      <com.worldventures.dreamtrips.wallet.ui.wizard.pin.custom.DirectionInfoView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            app:infoViewImage="@drawable/wizard_lock_info_arrow_left"
            app:infoViewTitle="@string/wallet_lock_label_swipe_left"
            />
   </LinearLayout>

   <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:paddingTop="@dimen/spacing_small"
         >

      <com.worldventures.dreamtrips.wallet.ui.wizard.pin.custom.DirectionInfoView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            app:infoViewImage="@drawable/wizard_lock_info_long_click_right_btn"
            app:infoViewTitle="@string/wallet_lock_label_hold_right_btn"
            />

      <com.worldventures.dreamtrips.wallet.ui.wizard.pin.custom.DirectionInfoView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            app:infoViewImage="@drawable/wizard_lock_info_long_click_left_btn"
            app:infoViewTitle="@string/wallet_lock_label_hold_left_btn"
            />
   </LinearLayout>

   <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:paddingTop="@dimen/spacing_small"
         >

      <com.worldventures.dreamtrips.wallet.ui.wizard.pin.custom.DirectionInfoView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            app:infoViewImage="@drawable/wizard_lock_info_click_right_btn"
            app:infoViewTitle="@string/wallet_lock_label_click_right_btn"
            />

      <com.worldventures.dreamtrips.wallet.ui.wizard.pin.custom.DirectionInfoView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            app:infoViewImage="@drawable/wizard_lock_info_click_left_btn"
            app:infoViewTitle="@string/wallet_lock_label_tap_left_btn"
            />
   </LinearLayout>

</LinearLayout>