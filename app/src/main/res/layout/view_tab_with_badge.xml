<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:tools="http://schemas.android.com/tools"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      >

   <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:layout_marginBottom="3dp"
         android:background="@drawable/tab_background_color"
         >

      <TextView
            android:id="@+id/psts_tab_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/spacing_small"
            android:layout_marginRight="@dimen/spacing_small"
            android:gravity="center"
            android:singleLine="true"
            android:textAllCaps="true"
            android:textColor="@color/tab_text_color"
            />

      <com.worldventures.core.ui.view.custom.BadgeView
            android:id="@+id/psts_tab_badge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/psts_tab_title"
            android:layout_alignTop="@+id/psts_tab_title"
            android:layout_marginRight="-8dp"
            android:layout_marginTop="-8dp"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_small"
            tools:text="35"
            />
   </RelativeLayout>


</FrameLayout>