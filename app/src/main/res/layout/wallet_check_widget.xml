<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:tools="http://schemas.android.com/tools"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:minHeight="36dp"
      android:paddingBottom="@dimen/spacing_normal"
      android:paddingTop="@dimen/spacing_normal"
      android:theme="@style/WalletTheme"
      >

   <ImageView
         android:id="@+id/check_icon_status"
         android:layout_width="18dp"
         android:layout_height="18dp"
         android:layout_alignBottom="@+id/check_icon"
         android:layout_alignTop="@+id/check_icon"
         android:layout_marginEnd="@dimen/spacing_medium"
         android:src="@drawable/ic_wallet_check_success"
         tools:ignore="ContentDescription"
         />

   <ImageView
         android:id="@+id/check_icon"
         android:layout_width="32dp"
         android:layout_height="32dp"
         android:layout_alignParentTop="true"
         android:layout_toEndOf="@+id/check_icon_status"
         tools:ignore="ContentDescription"
         tools:src="@drawable/ic_wallet_power"
         />

   <TextView
         android:id="@+id/check_title"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentTop="true"
         android:layout_toEndOf="@+id/check_icon"
         android:paddingEnd="0dp"
         android:paddingStart="@dimen/spacing_large"
         android:textAppearance="?android:attr/textAppearanceMedium"
         tools:text="Turn on the flye SmartCard"
         tools:textColor="#81c435"
         />

</RelativeLayout>