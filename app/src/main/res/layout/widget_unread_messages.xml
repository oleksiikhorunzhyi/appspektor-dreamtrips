<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

   <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:background="@color/white"
         >

      <TextView
            android:id="@+id/chat_users_unread_messages_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/chat_close_icon"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/chat_unread_messages_textview_margin_top"
            android:layout_marginLeft="@dimen/chat_unread_messages_textview_margin_left"
            android:drawableLeft="@drawable/up_arrow"
            android:drawablePadding="@dimen/chat_unread_messages_textview_drawable_padding"
            android:layout_centerVertical="true"
            android:textColor="@color/chat_unread_message_header_text_color"
            android:textSize="@dimen/chat_unread_messages_textview_text_size"
            />

      <ImageView
            android:id="@+id/chat_close_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/chat_unread_messages_close_button_padding"
            android:src="@drawable/ic_close_gray"
            />
   </RelativeLayout>
</merge>