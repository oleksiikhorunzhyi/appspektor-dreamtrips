<?xml version="1.0" encoding="utf-8"?>
<resources>

   <style name="AppTheme" parent="android:Theme.Material.Light"></style>

   <style name="DtlButtonTheme" parent="Base.Widget.AppCompat.Button">
      <item name="android:colorButtonNormal">@color/selector_verify_button_color</item>
   </style>

   <style name="Theme.DreamTripsTheme.Progress.White" parent="Theme.AppCompat.Light">
      <item name="android:colorControlActivated">@color/white</item>
   </style>

   <style name="WhiteButtonTheme" parent="Base.Widget.AppCompat.Button">
      <item name="android:colorButtonNormal">@color/white</item>
   </style>

   <style name="Player360SeekBar">
      <item name="android:layout_marginLeft">-2dp</item>
      <item name="android:layout_marginRight">-2dp</item>
      <item name="android:layout_marginBottom">-7dp</item>
      <item name="android:thumbOffset">2dp</item>
      <item name="android:thumbTint">@android:color/white</item>
   </style>

   <style name="RobotoMediumTextView" parent="TextAppearance.AppCompat">
      <item name="android:fontFamily">sans-serif</item>
   </style>
   <style name="RatingBar" parent="Base.Widget.AppCompat.RatingBar">
      <item name="colorControlNormal">@color/textCommentColorReview</item>
      <item name="colorControlActivated">@color/rating_color</item>
      <item name="android:progressTint">@color/rating_color</item>
      <item name="android:tint">@color/textCommentColorReview</item>
   </style>
   <style name="IndeterminateProgress" parent="Theme.AppCompat.Light">
      <item name="colorAccent">@color/uploading_cell_progress_bar_active_current</item>
   </style>

</resources>
