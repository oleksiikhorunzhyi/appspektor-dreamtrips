<resources>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="ToolBarStyle" parent="">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <style name="TransientToolBarStyle" parent="ToolBarStyle">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="profile_fragment_edit_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:inputType">textCapSentences</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body2</item>
        <item name="android:textColor">@color/selector_navigation_drawer_text</item>
        <item name="android:textIsSelectable">false</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="menu_labels_style">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="myRecyclerViewStyle">
        <item name="android:clipChildren">false</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:scrollbars">vertical</item>
    </style>

    <style name="BottomSheetDialog">
        <item name="android:windowEnterAnimation">@anim/slide_up_dialog</item>
        <item name="android:windowExitAnimation">@anim/slide_out_down</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="DreamTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/theme_main_darker</item>
        <item name="tabMode">scrollable</item>
        <item name="tabPaddingStart">0dp</item>
        <item name="tabPaddingEnd">0dp</item>
        <item name="tabGravity">fill</item>
        <item name="tabIndicatorHeight">3dp</item>
    </style>

    <style name="DreamFixedTabLayout" parent="DreamTabLayout">
        <item name="tabMode">fixed</item>
    </style>

    <style name="DreamTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black_semi_transparent</item>
        <item name="textAllCaps">true</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="DtlTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/dtl_tab_indicator</item>
        <item name="tabMode">fixed</item>
        <item name="tabPaddingStart">0dp</item>
        <item name="tabPaddingEnd">0dp</item>
        <item name="tabGravity">fill</item>
        <item name="tabIndicatorHeight">2dp</item>
    </style>

    <style name="DtlTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/dtl_tab_text_normal</item>
        <item name="textAllCaps">true</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="UserStatusTextAppearance" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:shadowColor">@color/user_status_text_shadow</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">2</item>
    </style>
</resources>
