<resources>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="ToolBarStyle" parent="">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <style name="TransientToolBarStyle" parent="ToolBarStyle">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="profile_fragment_edit_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:inputType">textCapSentences</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body2</item>
        <item name="android:textColor">@color/selector_navigation_drawer_text</item>
        <item name="android:textIsSelectable">false</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="menu_labels_style">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="myRecyclerViewStyle">
        <item name="android:clipChildren">false</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:scrollbars">vertical</item>
    </style>

    <style name="commonListItemStyle"></style>

    <style name="myCustomMenuTextApearance" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">@color/selector_action_button_popular</item>
    </style>

    <style name="BlackBorderButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:background">@drawable/bg_black_border</item>
    </style>
</resources>
