<?xml version="1.0" encoding="utf-8"?>

<resources>
    <color name="wallet_color_background_light">#008dbe</color>
    <color name="wallet_color_background_dark">#006699</color>
    <color name="wallet_color_primary">#00b3e3</color>

    <style name="WalletTheme" parent="AppTheme">
    </style>

    <style name="WalletTheme.Wizard">
        <item name="android:buttonStyle">@style/WalletWizardButton</item>
        <item name="android:editTextStyle">@style/WalletWizardEditText</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textAppearanceMedium">@style/WalletTheme.Wizard.TextAppearance</item>

        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorControlActivated">@color/wallet_color_background_light</item>
        <item name="colorControlHighlight">@color/wallet_color_background_light</item>
    </style>

    <style name="WalletTheme.ToolbarLight" parent="ThemeOverlay.AppCompat.Dark" >
        <item name="colorControlNormal">@android:color/white</item>
        <item name="toolbarStyle">@style/WalletTheme.ToolbarStyle</item>
    </style>

    <style name="WalletTheme.ToolbarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="WalletWizardButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@color/wallet_color_primary</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    </style>

    <style name="WalletTheme.Wizard.TextAppearance" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="WalletWizardEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    </style>
</resources>