<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="#c70000"
      android:orientation="vertical"
      >

   <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:paddingBottom="@dimen/spacing_small"
         android:paddingTop="@dimen/spacing_small"
         >

      <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/spacing_normal"
            android:layout_marginStart="@dimen/spacing_normal"
            android:layout_toLeftOf="@+id/actions"
            android:layout_toStartOf="@+id/actions"
            android:orientation="vertical"
            >

         <TextView
               android:id="@+id/likes_count"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textColor="@color/theme_main_darker"
               />

         <TextView
               android:id="@+id/comments_count"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textColor="@color/theme_main_darker"
               />

      </LinearLayout>

      <LinearLayout
            android:id="@+id/actions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:orientation="horizontal"
            >

         <ImageView
               android:id="@+id/likes"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:padding="@dimen/spacing_small"
               android:src="@drawable/ic_feed_thumb_up"
               />

         <ImageView
               android:id="@+id/comments"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:padding="@dimen/spacing_small"
               android:src="@drawable/ic_feed_footer_comments"
               />

         <ImageView
               android:id="@+id/feed_share"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:padding="@dimen/spacing_small"
               android:src="@drawable/ic_feed_footer_share"
               />

         <ImageView
               android:id="@+id/more"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginEnd="@dimen/spacing_small"
               android:layout_marginRight="@dimen/spacing_small"
               android:padding="@dimen/spacing_small"
               android:src="@drawable/ic_post_more_normal"
               />
      </LinearLayout>


   </RelativeLayout>
</merge>