<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:app="http://schemas.android.com/apk/res-auto"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_marginBottom="33dp"
      android:layout_marginTop="33dp"
      android:gravity="center_horizontal"
      android:orientation="vertical"
      >

   <TextView
         android:id="@+id/tv_thank_you_pilot"
         android:layout_width="300dp"
         android:layout_height="wrap_content"
         android:layout_marginEnd="8dp"
         android:layout_marginLeft="8dp"
         android:layout_marginRight="8dp"
         android:layout_marginStart="8dp"
         android:fontFamily="sans-serif"
         android:gravity="center_horizontal"
         android:text="@string/thank_you_thrst_pilot"
         android:textColor="#4a4a4a"
         android:textSize="26sp"
         android:textStyle="bold"
         app:layout_constraintLeft_toLeftOf="parent"
         app:layout_constraintRight_toRightOf="parent"
         app:layout_constraintTop_toTopOf="parent"
         />

   <TextView
         android:id="@+id/tv_thank_you_pilot2"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:fontFamily="sans-serif"
         android:gravity="center_horizontal"
         android:text="@string/second_failure_text_thrst_pilot"
         android:textColor="#4a4a4a"
         android:textSize="16sp"
         android:textStyle="bold"
         android:visibility="gone"
         app:layout_constraintLeft_toLeftOf="parent"
         app:layout_constraintRight_toRightOf="parent"
         app:layout_constraintTop_toBottomOf="@+id/tv_payment_sub_thank_you_message_pilot"
         />

   <TextView
         android:id="@+id/tv_payment_status_pilot"
         android:layout_width="274dp"
         android:layout_height="wrap_content"
         android:layout_marginTop="8dp"
         android:fontFamily="sans-serif"
         android:gravity="center_horizontal"
         android:text="@string/payment_success_status_pilot"
         android:textColor="#4a4a4a"
         android:textSize="16sp"
         android:textStyle="normal"
         app:layout_constraintLeft_toLeftOf="parent"
         app:layout_constraintRight_toRightOf="parent"
         app:layout_constraintTop_toBottomOf="@+id/tv_payment_sub_thank_you_message_pilot"
         />

   <TextView
         android:id="@+id/tv_payment_sub_thank_you_message_pilot"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginLeft="8dp"
         android:layout_marginRight="8dp"
         android:layout_marginTop="8dp"
         android:fontFamily="sans-serif"
         android:gravity="center_horizontal"
         android:text="@string/payment_resume_success_pilot"
         android:textColor="#4a4a4a"
         android:textSize="16sp"
         android:textStyle="bold"
         app:layout_constraintLeft_toLeftOf="parent"
         app:layout_constraintRight_toRightOf="parent"
         app:layout_constraintTop_toBottomOf="@+id/tv_thank_you_pilot"
         />

   <LinearLayout
         android:layout_width="250dp"
         android:layout_height="match_parent"
         android:gravity="center_horizontal"
         android:orientation="vertical"
         >

      <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="10dp"
            android:visibility="visible"
            app:cardCornerRadius="4dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_payment_status_pilot"
            >

         <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:gravity="center_horizontal"
               android:orientation="vertical"
               android:padding="20dp"
               >

            <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:gravity="center"
                  android:orientation="horizontal"
                  >

               <ImageView
                     android:id="@+id/iv_status_payment_pilot"
                     android:layout_width="50dp"
                     android:layout_height="50dp"
                     app:srcCompat="@drawable/ic_wallet_vector_check_circle_green"
                     />

               <LinearLayout
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:orientation="vertical"
                     android:paddingLeft="10dp"
                     >

                  <TextView
                        android:id="@+id/tv_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:text="$14.75"
                        android:textColor="#4a4a4a"
                        android:textSize="26sp"
                        />

                  <TextView
                        android:id="@+id/tv_total_charged_text_pilot"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:text="Total Amount Paid"
                        android:textSize="14sp"
                        />

               </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="10dp"
                  >

               <TextView
                     android:id="@+id/textView24"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_alignParentStart="true"
                     android:layout_alignParentTop="true"
                     android:text="Tip Amount:"
                     android:textSize="16sp"
                     />

               <TextView
                     android:id="@+id/tv_tip"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_alignParentEnd="true"
                     android:text="$3.00"
                     android:textSize="16sp"
                     />
            </RelativeLayout>

         </LinearLayout>
      </android.support.v7.widget.CardView>

      <RelativeLayout
            android:id="@+id/layout_subtotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

         <TextView
               android:id="@+id/tv_subtotal"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignParentEnd="true"
               android:text="$9.75"
               android:textSize="16sp"
               />

         <TextView
               android:id="@+id/textView27"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignParentStart="true"
               android:layout_below="@+id/textView244"
               android:layout_marginTop="10dp"
               android:text="Tax Amount:"
               android:textSize="16sp"
               />

         <TextView
               android:id="@+id/textView244"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignParentStart="true"
               android:layout_alignParentTop="true"
               android:text="Sub Total Amount:"
               android:textSize="16sp"
               />

         <TextView
               android:id="@+id/tv_tax"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignParentEnd="true"
               android:layout_below="@+id/tv_subtotal"
               android:layout_marginTop="10dp"
               android:text="$2.00"
               android:textSize="16sp"
               />
      </RelativeLayout>

      <TextView
            android:id="@+id/tv_earned_points"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/dt_points_icon"
            android:drawablePadding="5dp"
            android:text="@string/dtl_earned_points"
            android:textStyle="bold"
            />

      <TextView
            android:id="@+id/tv_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="2017-Oct-10 13:21:26"
            />


      <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

         <TextView
               android:id="@+id/tv_receipt"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_above="@+id/linearLayout2"
               android:layout_centerHorizontal="true"
               android:gravity="center_vertical|center_horizontal"
               android:paddingBottom="20dp"
               android:text="View your receipt"
               />

         <LinearLayout
               android:id="@+id/linearLayout2"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_alignParentBottom="true"
               android:layout_alignParentStart="true"
               android:gravity="center"
               android:orientation="vertical"
               >

            <TextView
                  android:id="@+id/tv_review_merchant"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_centerHorizontal="true"
                  android:text="Review Merchant"
                  />

            <Button
                  android:id="@+id/payment_done_button"
                  android:layout_width="250dp"
                  android:layout_height="wrap_content"
                  android:layout_centerHorizontal="true"
                  android:layout_weight="1"
                  android:text="@string/btn_payment_done_pilot"
                  android:textColor="@android:color/white"
                  android:textSize="16sp"
                  android:visibility="gone"
                  />

         </LinearLayout>

      </RelativeLayout>

   </LinearLayout>
</LinearLayout>
