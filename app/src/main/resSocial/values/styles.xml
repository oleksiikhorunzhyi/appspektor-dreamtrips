<?xml version="1.0" encoding="utf-8"?>
<resources>

   <style name="ToolBarStyle.Header">
      <item name="android:layout_width">match_parent</item>
      <item name="android:layout_height">?attr/actionBarSize</item>
      <item name="android:gravity">center</item>
      <item name="android:textColor">@color/white</item>
      <item name="android:textSize">19sp</item>
      <item name="android:textStyle">bold</item>
   </style>

   <style name="profile_fragment_edit_text">
      <item name="android:layout_width">match_parent</item>
      <item name="android:layout_height">wrap_content</item>
      <item name="android:gravity">center_vertical</item>
      <item name="android:inputType">textCapSentences</item>
      <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body2</item>
      <item name="android:textColor">@color/selector_navigation_drawer_text</item>
      <item name="android:textIsSelectable">false</item>
      <item name="android:textSize">15sp</item>
   </style>

   <style name="BottomSheetDialog">
      <item name="android:windowEnterAnimation">@anim/slide_up_dialog</item>
      <item name="android:windowExitAnimation">@anim/slide_out_down</item>
      <item name="android:windowBackground">@null</item>
      <item name="android:windowFrame">@null</item>
      <item name="android:windowNoTitle">true</item>
   </style>

   <style name="DreamTabLayout" parent="Widget.Design.TabLayout">
      <item name="tabIndicatorColor">@color/theme_main_darker</item>
      <item name="tabMode">scrollable</item>
      <item name="tabPaddingStart">0dp</item>
      <item name="tabPaddingEnd">0dp</item>
      <item name="tabGravity">fill</item>
      <item name="tabIndicatorHeight">3dp</item>
   </style>

   <style name="DreamFixedTabLayout" parent="DreamTabLayout">
      <item name="tabMode">fixed</item>
   </style>

   <style name="UserStatusTextAppearance" parent="TextAppearance.AppCompat.Subhead">
      <item name="android:shadowColor">@color/user_status_text_shadow</item>
      <item name="android:shadowDx">2</item>
      <item name="android:shadowDy">2</item>
      <item name="android:shadowRadius">2</item>
   </style>

   <style name="Player360SeekBar">
      <item name="android:thumb">@drawable/background_player360_seekbar_thumb_selector</item>
      <item name="android:layout_marginLeft">-2dp</item>
      <item name="android:layout_marginRight">-2dp</item>
      <item name="android:layout_marginBottom">-9dp</item>
      <item name="android:thumbOffset">3dp</item>
   </style>

   <style name="Player360HoldableButton">
      <item name="android:layout_width">27dp</item>
      <item name="android:layout_height">18dp</item>
      <item name="android:layout_centerVertical">true</item>
      <item name="holdInitialDelay">1000</item>
      <item name="holdRepeatDelay">1000</item>
   </style>


   <style name="RobotoMediumTextView" parent="TextAppearance.AppCompat">
      <item name="android:fontFamily">sans-serif</item>
   </style>

   <style name="UploadStatusTextView">
      <item name="android:textColor">@color/uploading_cell_status_label_uploading</item>
      <item name="android:textSize">@dimen/uploading_cell_status_label_text_size</item>
   </style>

   <style name="TranslateView">
      <item name="android:layout_marginLeft">@dimen/spacing_normal</item>
      <item name="android:layout_marginRight">@dimen/spacing_normal</item>
      <item name="android:layout_marginBottom">@dimen/spacing_small</item>
   </style>

   <style name="TranslateButton">
      <item name="android:layout_marginBottom">@dimen/spacing_small</item>
      <item name="android:layout_marginLeft">@dimen/spacing_normal</item>
      <item name="android:background">@drawable/background_translate_button</item>
      <item name="android:padding">@dimen/spacing_tiny</item>
   </style>

</resources>