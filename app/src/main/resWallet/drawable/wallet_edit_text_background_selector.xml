<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

   <item android:state_enabled="true" android:state_focused="true">
      <layer-list>
         <item android:left="-4dp" android:right="-4dp" android:top="-4dp">
            <shape android:shape="rectangle">
               <solid android:color="@android:color/transparent" />
               <stroke android:width="2dp" android:color="@color/wallet_edit_text_focused_state" />
            </shape>
         </item>
      </layer-list>
   </item>

   <item android:state_enabled="false">
      <layer-list>
         <item android:left="-4dp" android:right="-4dp" android:top="-4dp">
            <shape android:shape="rectangle">
               <solid android:color="@android:color/transparent" />
               <stroke android:width="2dp" android:color="@color/wallet_edit_text_disabled_state" />
            </shape>
         </item>
      </layer-list>
   </item>

   <item>
      <layer-list>
         <item android:left="-2dp" android:right="-2dp" android:top="-2dp">
            <shape android:shape="rectangle">
               <solid android:color="@android:color/transparent" />
               <stroke android:width="1dp" android:color="@color/wallet_edit_text_normal_state" />
            </shape>
         </item>
      </layer-list>
   </item>
</selector>